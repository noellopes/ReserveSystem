@model ReserveSystem.Models.Staff

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center my-4">Delete Staff</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="text-center">Are you sure you want to delete this Staff?</h3>
                    <div>
                        <h4 class="text-center">Staff Details</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Staff_Name)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Staff_Name)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Job_Name)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Job_Name)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.TipoCarta)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.TipoCarta)
                            </dd>
                        </dl>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="StaffId" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Index" class="btn btn-link">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
