@model ReserveSystem.Models.Staff

<h1>Delete Staff</h1>

<h3>Are you sure you want to delete this staff member?</h3>

<div>
    <h4>Staff</h4>
    <dl class="row">
        <dt class="col-sm-2">Staff ID</dt>
        <dd class="col-sm-10">@Model.StaffID</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.StaffName</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.StaffEmail</dd>
        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.StaffPhone</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="StaffID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
