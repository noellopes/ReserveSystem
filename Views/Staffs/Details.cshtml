@model ReserveSystem.Models.Staff

<h1>Staff Details</h1>

<div>
    <h4>Staff</h4>
    <dl class="row">
        <dt class="col-sm-2">Staff ID</dt>
        <dd class="col-sm-10">@Model.StaffID</dd>
        <dt class="col-sm-2">Job ID</dt>
        <dd class="col-sm-10">@Model.JobId</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.StaffName</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.StaffEmail</dd>
        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.StaffPhone</dd>
        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartFunctionsDate.ToShortDateString()</dd>
        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndFunctionsDate?.ToShortDateString()</dd>
        <dt class="col-sm-2">Days Off</dt>
        <dd class="col-sm-10">@Model.DaysOffVacation</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
