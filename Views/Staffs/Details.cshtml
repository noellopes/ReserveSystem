@model ReserveSystem.Models.Staff

<h1>Staff Details</h1>

<div class="container mt-4">
    <h4>Staff</h4>
    <dl class="row">
        <dt class="col-sm-2">Staff ID</dt>
        <dd class="col-sm-10">@Model.StaffID</dd>

        <dt class="col-sm-2">Job Title</dt>
        <dd class="col-sm-10">@Model.Job?.JobTitle</dd> <!-- Display Job Title -->

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.StaffName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.StaffEmail</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.StaffPhone</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartFunctionsDate.ToString("yyyy-MM-dd")</dd> <!-- Date format -->

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndFunctionsDate?.ToString("yyyy-MM-dd") ?? "N/A"</dd> <!-- Date format with fallback -->

        <dt class="col-sm-2">Days Off</dt>
        <dd class="col-sm-10">@Model.DaysOffVacation</dd>
    </dl>

    <!-- Optional action buttons -->
    <a asp-action="Edit" asp-route-id="@Model.StaffID" class="btn btn-warning">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.StaffID" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this staff member?');">Delete</a>

    <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
</div>
