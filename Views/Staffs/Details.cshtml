@model ReserveSystem.Models.Staff

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center my-4">Staff Details</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="text-center">Staff Information</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Staff_Name)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Staff_Name)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Job_Name)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Job_Name)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.TipoCarta)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.TipoCarta)
                        </dd>
                    </dl>
                </div>
            </div>
            <div class="d-flex justify-content-between mt-3">
                <a asp-action="Edit" asp-route-id="@Model?.StaffId" class="btn btn-warning btn-sm">Edit</a>
                <a asp-action="Index" class="btn btn-link">Back to List</a>
            </div>
        </div>
    </div>
</div>
