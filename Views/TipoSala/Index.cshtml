@model IEnumerable<ReserveSystem.Models.TipoSala>

<h1>Lista de TipoSala</h1>

@if (!Model.Any())
{
    <div class="alert alert-warning">
        Nenhum TipoSala disponível. Clique abaixo para adicionar um novo TipoSala.
    </div>
    <a asp-action="Create" class="btn btn-primary">Criar Novo TipoSala</a>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>#</th>
            <th>Nome</th>
            <th>Tamanho (m²)</th>
            <th>Capacidade</th>
            <th>Preço por Hora (€)</th>
            <th>Ações</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdTipoSala</td>
                <td>@item.NomeSala</td>
                <td>@item.TamanhoSala</td>
                <td>@item.Capacidade</td>
                <td>@item.PreçoHora.ToString("F2")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.IdTipoSala" class="btn btn-info btn-sm">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@item.IdTipoSala" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.IdTipoSala" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <a asp-action="Create" class="btn btn-primary">Criar Novo TipoSala</a>
}