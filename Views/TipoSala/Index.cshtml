@model IEnumerable<ReserveSystem.Models.TipoSala>

@{
ViewData["Title"] = "Room Types";
}

<h1 class="mb-4">Room Types</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">Create New Room Type</a>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Room Size (m²)</th>
        <th>Capacity</th>
        <th>Hourly Price</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.IdTipoSala</td>
        <td>@Html.DisplayFor(modelItem => item.NomeSala)</td>
        <td>@Html.DisplayFor(modelItem => item.TamanhoSala)</td>
        <td>@Html.DisplayFor(modelItem => item.Capacidade)</td>
        <td>@Html.DisplayFor(modelItem => item.PreçoHora)</td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.IdTipoSala" class="btn btn-sm btn-warning">Edit</a>
            <a asp-action="Details" asp-route-id="@item.IdTipoSala" class="btn btn-sm btn-info">Details</a>
            <a asp-action="Delete" asp-route-id="@item.IdTipoSala" class="btn btn-sm btn-danger">Delete</a>
        </td>
    </tr>
    }
    </tbody>
</table>
