@model ReserveSystem.Models.TipoSala

@{
ViewData["Title"] = "Delete Room Type";
}

<h1>Delete Room Type</h1>

<h3>Are you sure you want to delete this room type?</h3>

<div>
    <dl class="row">
        <dt>Room ID</dt>
        <dd>@Model.IdTipoSala</dd>

        <dt>Room Name</dt>
        <dd>@Model.NomeSala</dd>

        <dt>Room Size (m²)</dt>
        <dd>@Model.TamanhoSala</dd>

        <dt>Capacity</dt>
        <dd>@Model.Capacidade</dd>

        <dt>Hourly Price</dt>
        <dd>@Model.PreçoHora</dd>
    </dl>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="IdTipoSala" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
