<div class="details-container">
    <h1 class="text-center">Edit Seasonality</h1>
    <hr class="hr" />

    <form asp-action="Edit" id="editForm" style="width:90%">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id_saz" />

        <div class="form-group">
            <label asp-for="NameSeason" class="control-label label"></label>
            <input asp-for="NameSeason" class="form-control value" />
            <span asp-validation-for="NameSeason" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DateBegin" class="control-label label"></label>
            <input asp-for="DateBegin" class="form-control value" type="date" />
            <span asp-validation-for="DateBegin" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DateEnd" class="control-label label"></label>
            <input asp-for="DateEnd" class="form-control value" type="date" />
            <span asp-validation-for="DateEnd" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SeasonFee" class="control-label label"></label>
            <input asp-for="SeasonFee" class="form-control value" type="number" step="0.01" min="0" max="1" />
            <span asp-validation-for="SeasonFee" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label label">
                <input class="form-check-input value" asp-for="InUse" /> In Use
            </label>
        </div>

		<!-- Trigger the modal instead of submitting the form directly -->
		<button type="button" class="btn btn_edit" data-bs-toggle="modal" data-bs-target="#confirmEditModal">Confirm Changes</button>

        <a asp-action="ViewSeasonList" class="btn btn_back">Back to List</a>
        
        

        <!-- Modal for Confirm Edit -->
        <div class="modal fade" id="confirmEditModal" tabindex="-1" aria-labelledby="confirmEditModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="confirmEditModalLabel">Save Changes</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to permanently alter the event "<strong>@Model.NameSeason</strong>"?<br></p>
                    </div>
                    <div class="modal-footer">
                        <!-- Submit the form when the user confirms -->
                        <button type="button" class="btn btn_editC" id="confirmSubmit">Confirm Changes</button>
                        <button type="button" class="btn btn_cancel" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

    
</div>

<!-- Bootstrap JS and dependencies for modal -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // JavaScript to handle modal confirmation
    document.getElementById("confirmSubmit").addEventListener("click", function () {
        // Submit the form when the confirm button is clicked
        document.getElementById("editForm").submit();
    });
</script>
