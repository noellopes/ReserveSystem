<style>
    body {
        font-family: 'Georgia', serif;
        background-color: #f9f9f6; /* Off-white background */
        color: #1a1a1a; /* Deep black for text */
    }

    /* Horizontal Line Styling */
    .hr {
        border: none;
        height: 2px;
        background-color: #d4af37; /* Gold */
        width: 60%;
        margin: 1rem auto;
        opacity: 0.8;
    }

    /* Container Styling */
    .details-container {
        background: #ffffff; /* White background for container */
        padding: 3rem;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        max-width: 700px;
        margin: 5rem auto;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    /* Form Styling */
    .form-group {
        margin-bottom: 1.5rem;
        width: 100%;
    }

    .form-check-label {
        font-size: 0.5rem;
        color: #333333;
    }

    label {
        font-weight: 600;
        color: #333333;
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
        display: block;
    }

    /* Form Inputs */
    .form-group label {
        font-size: 1.1rem;
        color: #1a1a1a; /* Black for labels */
        font-weight: 600;
    }

    /* Input Field Styles */
    .form-group input{
        border-radius: 8px;
        border: 1px solid #cccccc;
        padding: 12px 16px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background-color: #f9f9f9; /* Light off-white for input background */
    }

        .form-group input:focus {
            border-color: #d4af37; /* Gold border on focus */
            box-shadow: 0 0 8px rgba(212, 175, 55, 0.2); /* Soft gold focus shadow */
            background-color: #ffffff; /* White background on focus */
        }

    /* Form Check Styles */
    .form-check-input:checked {
        background-color: #d4af37; /* Gold for checked boxes */
        border-color: #d4af37;
    }

    /* Button Styling */
    .btn_edit, .btn_back{
        font-weight: 600;
        padding: 14px 28px;
        border-radius: 50px;
        font-size: 1.125rem;
        width: 100%;
        text-align: center;
        display: inline-block;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

    /* Confirm button styling */
    .btn_edit {
        margin-bottom: 1rem; 
        background-color: #ffffff;
        border-color: #d4af37;
        color: #333333;
    }

        .btn_edit:hover {
            background-color: #333333;
            color: #F5F5F5;
            border-color: #d4af37;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            transform: translateY(-3px);
        }

