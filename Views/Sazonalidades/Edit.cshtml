@model ReserveSystem.Models.Sazonalidade

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Seasonality</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id_saz" />
            <div class="form-group">
                <label asp-for="NameSeason" class="control-label"></label>
                <input asp-for="NameSeason" class="form-control" />
                <span asp-validation-for="NameSeason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateBegin" class="control-label"></label>
                <input asp-for="DateBegin" class="form-control" type="date" />
                <span asp-validation-for="DateBegin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateEnd" class="control-label"></label>
                <input asp-for="DateEnd" class="form-control" type="date"/>
                <span asp-validation-for="DateEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeasonFee" class="control-label"></label>
                <input asp-for="SeasonFee" class="form-control" type="number" step="0.01" min="0" max="1" />
                <span asp-validation-for="SeasonFee" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="InUse" /> @Html.DisplayNameFor(model => model.InUse)
                </label>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Id_saz" />
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="ViewSeasonList">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}