@model ReserveSystem.Models.TypeOfSchedule

@{
    ViewData["Title"] = "Delete";
}

<section class="section-container" style="text-align: center;">
    <h1>
        <span>Delete</span>
    </h1>

    <h3>Are you sure you want to delete this?</h3>

    <div style="border: 1px solid #ddd; padding: 20px; margin: 20px auto; display: inline-block; text-align: left;">
        <dl class="row">
            <dt class="col-sm-6">Type Of Schedule ID</dt>
            <dd class="col-sm-6">@Model?.TypeOfScheduleId</dd>

            <dt class="col-sm-6">Type Of Schedule Name</dt>
            <dd class="col-sm-6">@Model?.TypeOfScheduleName</dd>
        </dl>

        <!-- Delete and Back to List Buttons -->
        <form asp-action="Delete" style="margin-top: 20px; text-align: center;">
            <input type="hidden" asp-for="TypeOfScheduleId" />
            <button type="submit" class="btn btn-danger" style="margin-right: 10px;">Delete</button>
            <a asp-action="Index" class="btn btn-secondary" style="margin-left: 10px;">Back to List</a>
        </form>
    </div>
</section>