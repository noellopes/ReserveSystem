@model ReserveSystem.Models.TypeOfSchedule

@{
    ViewData["Title"] = "Edit Type Of Schedule";
}

<section class="section-container" style="text-align: center;">
    <h1>
        <span>Edit Type Of Schedule</span>
    </h1>

    <div style="border: 1px solid #ddd; padding: 20px; margin: 20px auto; display: inline-block; text-align: left;">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TypeOfScheduleId" />

            <!-- Form Grubu -->
            <div class="form-group">
                <label asp-for="TypeOfScheduleName" class="control-label">Type Of Schedule Name</label>
                <input asp-for="TypeOfScheduleName"
                       class="form-control small-input"
                       placeholder="Enter schedule name..." />
                <span asp-validation-for="TypeOfScheduleName" class="text-danger"></span>
            </div>

            <!-- Butonlar -->
            <div style="margin-top: 20px; text-align: center;">
                <input type="submit" value="Save" class="btn btn-primary" style="margin-right: 10px;" />
                <a asp-action="Index" class="btn btn-secondary" style="margin-left: 10px;">Back to List</a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}