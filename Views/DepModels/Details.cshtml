@model ReserveSystem.Models.DepModel

@{
    ViewData["Title"] = "Department Details";
}

<div class="container my-5">
    <h1 class="mb-4">Department Details</h1>

    <!-- Department Information Card -->
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title">Department Information</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4 fw-bold">
                    @Html.DisplayNameFor(model => model.depDescription)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.depDescription)
                </dd>
            </dl>
        </div>
    </div>

    <!-- Navigation Buttons -->
    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.depID" class="btn btn-primary btn-lg me-2">Edit</a>
        <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
