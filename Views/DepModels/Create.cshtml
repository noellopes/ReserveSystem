@model ReserveSystem.Models.DepModel

@{
    ViewData["Title"] = "Create Department";
}

<div class="container my-5">
    <h1 class="mb-4">Create Department</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Department Description Field -->
                <div class="mb-3">
                    <label asp-for="depDescription" class="form-label fw-bold">Department Description</label>
                    <input asp-for="depDescription" class="form-control" placeholder="Enter department description" />
                    <span asp-validation-for="depDescription" class="text-danger"></span>
                </div>

                <!-- Create Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Create</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Back to List Button -->
    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
