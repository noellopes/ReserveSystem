@model ReserveSystem.Models.DepModel

@{
    ViewData["Title"] = "Delete Department";
}

<div class="container my-5">
    <h1 class="mb-4 text-danger">Delete Department</h1>

    <h3 class="text-warning mb-4">Are you sure you want to delete this?</h3>

    <!-- Department Details -->
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title">Department Information</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4 fw-bold">
                    @Html.DisplayNameFor(model => model.depDescription)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.depDescription)
                </dd>
            </dl>
        </div>
    </div>

    <!-- Delete Confirmation and Navigation Buttons -->
    <div class="mt-4">
        <form asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" asp-for="depID" />
            <button type="submit" class="btn btn-danger btn-lg me-2">Delete</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
