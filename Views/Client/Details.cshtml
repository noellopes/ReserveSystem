@model ReserveSystem.Models.ClientModel

@{
    ViewData["Title"] = "Detalhes do Cliente";
}

<h1 class="text-center my-4">Detalhes do Cliente</h1>

<div class="form-group">
    <label><strong>Nome:</strong></label>
    <p>@Model.Name</p>
</div>

<div class="form-group">
    <label><strong>Email:</strong></label>
    <p>@Model.Email</p>
</div>

<div class="form-group">
    <label><strong>Telefone:</strong></label>
    <p>@Model.Phone</p>
</div>

<div class="form-group">
    <label><strong>Cliente Interno:</strong></label>
    <p>@(Model.isClientHotel ? "Sim" : "Não")</p>
</div>

<div class="text-center">
    <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
</div>
