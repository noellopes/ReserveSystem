@model IEnumerable<ReserveSystem.Models.ClientModel>

@{
    ViewData["Title"] = "List of Clients";
}

<h1>List of Clients</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoradaCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NIF)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoradaCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NIF)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClienteId" class="btn btn-primary ">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ClienteId" class="btn btn-warning ">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ClienteId" class="btn btn-danger ">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
