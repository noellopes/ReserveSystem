@model IEnumerable<ReserveSystem.Models.ClientModel>

@{
    ViewData["Title"] = "Lista de Clientes";
}

<!-- Título da Página -->
<div class="container my-5">
    <h1 class="text-center my-4 text-dark fw-bold" style="font-family: 'Poppins', sans-serif;">Lista de Clientes</h1>

    <!-- Exibir Toast de Sucesso -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div id="successToast" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true" style="position: fixed; top: 20px; right: 20px; z-index: 1050;">
            <div class="d-flex">
                <div class="toast-body">
                    @TempData["SuccessMessage"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    }

    <!-- Botão para Criar Novo Cliente -->
    <div class="text-center mb-4">
        <a asp-action="Create" class="btn btn-dark btn-lg rounded-pill px-5 shadow">
            <i class="bi bi-person-plus-fill"></i> Adicionar Novo Cliente
        </a>
    </div>

    <!-- Tabela de Clientes -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Email</th>
                    <th scope="col">Telefone</th>
                    <th scope="col">Interno</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                        <td class="text-center">
                            @if (item.isClientHotel)
                            {
                                <!-- Ícone verde de visto -->
                                <i class="fa-solid fa-check text-success fs-3"></i>
                            }
                            else
                            {
                                <!-- Ícone vermelho de X -->
                                <i class="fa-solid fa-x text-danger fs-2"></i>
                            }
                        </td>
                        <td class="text-center">
                            <!-- Botão Ver -->
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm shadow" title="Ver detalhes">
                                <i class="bi bi-eye"></i> Ver
                            </a>
                            <!-- Botão Editar -->
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm shadow" title="Editar">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <!-- Botão Deletar -->
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm shadow" title="Deletar">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Script de ícones Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.min.js"></script>
