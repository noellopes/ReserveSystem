@model ReserveSystem.Models.ClientModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white text-center">
                    <h3 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Confirm Deletion</h3>
                </div>
                <div class="card-body">
                    <h4 class="text-center">Are you sure you want to delete this client?</h4>
                    <hr />
                    <dl class="row p-4">
                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-person"></i> @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-8 text-dark fw-bold">
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-telephone"></i> @Html.DisplayNameFor(model => model.Phone)
                        </dt>
                        <dd class="col-sm-8 text-dark fw-bold">
                            @Html.DisplayFor(model => model.Phone)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-house-door"></i> @Html.DisplayNameFor(model => model.Address)
                        </dt>
                        <dd class="col-sm-8 text-dark fw-bold">
                            @Html.DisplayFor(model => model.Address)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-envelope"></i> @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-8 text-dark fw-bold">
                            @Html.DisplayFor(model => model.Email)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-card-text"></i> @Html.DisplayNameFor(model => model.NIF)
                        </dt>
                        <dd class="col-sm-8 text-dark fw-bold">
                            @Html.DisplayFor(model => model.NIF)
                        </dd>
                    </dl>
                    <div class="text-center mt-4">
                        
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="ClienteId" />
                                <input type="submit" value="Delete" class="btn btn-danger" />
                                <a asp-action="Index">Back to List</a>
                            </form>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
