@model ReserveSystem.Models.ClientModel

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<!-- Título da Página -->
<div class="container my-5">
    <h1 class="text-center my-4 text-danger fw-bold" style="font-family: 'Poppins', sans-serif;">Excluir Cliente</h1>

    <!-- Mensagem de Confirmação -->
    <p class="text-center text-danger">Tem certeza de que deseja excluir este Cliente?</p>

    <!-- Detalhes do Cliente -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text"><strong>Email:</strong> @Model.Email</p>
            <p class="card-text"><strong>Telefone:</strong> @Model.Phone</p>
        </div>
    </div>

    <!-- Formulário para Exclusão -->
    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <!-- Botões de Ação -->
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-danger btn-lg rounded-pill px-5 shadow">Excluir</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg rounded-pill px-5 shadow">Cancelar</a>
        </div>
    </form>
</div>
