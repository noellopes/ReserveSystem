@model ReserveSystem.Models.ClientModel

@{
    ViewData["Title"] = "Delete Client";
}

<div class="container mt-5">
    <h1 class="text-danger text-center"><i class="bi bi-trash-fill"></i> Delete Client</h1>
    <p class="text-center text-muted">Are you sure you want to delete this client? This action cannot be undone.</p>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 shadow-lg mt-4">
                <div class="card">
                    <div class="card-header bg-danger text-white">
                        <h5 class="text-center"><i class="bi bi-person"></i> Client Details</h5>
                    </div>

                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">
                            <i class="bi bi-person"></i> @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-telephone"></i> @Html.DisplayNameFor(model => model.Phone)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Phone)
                        </dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-house-door"></i> @Html.DisplayNameFor(model => model.Address)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Address)
                        </dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-envelope"></i> @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Email)
                        </dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-card-text"></i> @Html.DisplayNameFor(model => model.NIF)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.NIF)
                        </dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-person-lock"></i> @Html.DisplayNameFor(model => model.Login)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Login)
                        </dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-check-circle"></i> @Html.DisplayNameFor(model => model.Status)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Status)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center mt-4">
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
        <form asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" asp-for="ClienteId" />
            <button type="submit" class="btn btn-danger m-2">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
        </form>
    </div>
</div>

