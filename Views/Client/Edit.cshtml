@model ReserveSystem.Models.ClientModel

@{
    ViewData["Title"] = "Editar Cliente";
}

<h1 class="text-center my-4">Editar Cliente</h1>

<div class="container">
    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()

        <!-- Campo Oculto para o ID -->
        <input type="hidden" asp-for="Id" />

        <!-- Resumo de Validação -->
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Campo Nome -->
        <div class="form-group">
            <label asp-for="Name" class="control-label">Nome</label>
            <input asp-for="Name" class="form-control" placeholder="Digite o nome do cliente" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Campo Email -->
        <div class="form-group">
            <label asp-for="Email" class="control-label">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Digite o email do cliente" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- Campo Telefone -->
        <div class="form-group">
            <label asp-for="Phone" class="control-label">Telefone</label>
            <input asp-for="Phone" class="form-control" placeholder="Digite o telefone do cliente" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <!-- Botões -->
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">Salvar Alterações</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
