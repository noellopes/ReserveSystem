@model ReserveSystem.Models.MotoristaTransporte

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center my-4">Delete MotoristaTransporte</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="text-center">Are you sure you want to delete this?</h4>
                    <hr />
                    <h5 class="text-center">MotoristaTransporte Information</h5>
                    <dl class="row">
                        <dt class="col-sm-3">Motorista:</dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.StaffId) <!-- Adjust according to actual property -->
                        </dd>
                        <dt class="col-sm-3">Transporte:</dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.TransporteId) <!-- Adjust according to actual property -->
                        </dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="MotoristaTransporteId" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Index" class="btn btn-link">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
