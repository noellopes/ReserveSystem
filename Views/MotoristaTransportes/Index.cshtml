@model IEnumerable<ReserveSystem.Models.MotoristaTransporte>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Staff)</th>
            <th>@Html.DisplayNameFor(model => model.Transporte)</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>@Html.DisplayFor(modelItem => item.Staff.Staff_Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Transporte.TipoTransporte)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MotoristaTransporteId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MotoristaTransporteId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MotoristaTransporteId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
