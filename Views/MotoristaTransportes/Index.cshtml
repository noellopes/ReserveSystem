@model IEnumerable<ReserveSystem.Models.MotoristaTransporte>
@using ReserveSystem.Models

@{
    ViewData["Title"] = "Motorista Transporte";
    var pageInfo = (PageInfo)ViewBag.PageInfo;
}

<h1 class="text-center my-4">Motorista Transporte List</h1>

<div class="container">
    <form method="get" asp-action="Index" class="mb-3">
        <div class="row">
            <div class="col-md-8">
                <input type="text" name="searchString" value="@ViewData["SearchString"]" class="form-control" placeholder="Search...">
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary w-100">Search</button>
            </div>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover text-center">
            <thead class="table-dark">
                <tr>
                    <th>Staff</th>
                    <th>Transporte</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Staff.Staff_Name</td>
                        <td>@item.Transporte.TipoTransporte</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.MotoristaTransporteId" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.MotoristaTransporteId" class="btn btn-info btn-sm text-white">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.MotoristaTransporteId" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Paginação -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @for (int i = pageInfo.FirstPageShow; i <= pageInfo.LastPageShow; i++)
            {
                <li class="page-item @(i == pageInfo.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-searchString="@ViewData["SearchString"]">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>
