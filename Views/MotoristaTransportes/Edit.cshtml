@model ReserveSystem.Models.MotoristaTransporte

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center my-4">Edit MotoristaTransporte</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="text-center">Edit MotoristaTransporte Information</h4>
                    <hr />
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="MotoristaTransporteId" />

                        <div class="form-group mb-3">
                            <label asp-for="StaffId" class="form-label"></label>
                            <select asp-for="StaffId" class="form-control" asp-items="ViewBag.StaffId"></select>
                            <span asp-validation-for="StaffId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="TransporteId" class="form-label"></label>
                            <select asp-for="TransporteId" class="form-control" asp-items="ViewBag.TransporteId"></select>
                            <span asp-validation-for="TransporteId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <button type="submit" class="btn btn-primary w-100">Save</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-link">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
