@model ReserveSystem.Models.TipoReserva

@{
    ViewData["Title"] = "Edit Booking Type";
}

<h2>Edit Booking Type</h2>

<form asp-action="Edit" method="post" class="card p-4 shadow-sm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="NomeReserva" class="form-label"></label>
        <input asp-for="NomeReserva" class="form-control" />
        <span asp-validation-for="NomeReserva" class="text-danger"></span>
    </div>
    <div class="text-end">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
        </form>
    </div>
</div>
}
