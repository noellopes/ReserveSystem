@model BookingViewModel

@{
    ViewData["Title"] = "Index";
}
@*Aqui aparecem as reservas feitas*@
<html>
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
</head>

<body>
    <h1>LISTA DE RESERVAS</h1>
    <div class="mt-3">
        <button type="button" class="btn btn-success">
            <a asp-action="Create" style="text-decoration: none; color: white"><b>Fazer reserva</b></a>
        </button>

        <button type="button" class="btn btn-warning">
            <a asp-action="Edit" style="text-decoration: none; color: white"><b>Alterar reserva</b></a>
        </button>

        <button type="button" class="btn btn-danger">
            <a asp-action="Delete" style="text-decoration: none; color: white"><b>Eliminar reserva</b></a>
        </button>
    </div>

    <table class="table table-primary table-bordered mt-3" style="text-align: center; border: 2px solid black; border-collapse: collapse;">
        <thead>
            <tr>
                <th colspan="3">Cliente</th>
                <th colspan="3">Data</th>
                <th colspan="3">Reserva</th>
            </tr>
        </thead>
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Telefone</th>
                <th scope="col">NIF</th>
                <th scope="col">Reserva</th>
                <th scope="col">Check-in</th>
                <th scope="col">Check-out</th>
                <th scope="col">Nº Pessoas</th>
                <th scope="col">Pagamento</th>
                <th scope="col">Funções</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.Bookings) 
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Client.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Client.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Client.Identification)</td>
                    <td>@Html.DisplayFor(modelItem => item.BOOKING_DATE)</td>
                    <td>@Html.DisplayFor(modelItem => item.CHECKIN_DATE)</td>
                    <td>@Html.DisplayFor(modelItem => item.CHECKOUT_DATE)</td>
                    <td>@Html.DisplayFor(modelItem => item.TOTAL_PERSONS_NUMBER)</td>
                    <td>@(item.PAYMENT_STATUS ? "Pago" : "Não pago")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.ID_BOOKING"><i class="fa-solid fa-circle-info text-black"></i></a> |
                        <a asp-action="Edit" asp-route-id="@item.ID_BOOKING"><i class="fa-solid fa-pen-to-square text-black"></i></a> |
                        <a asp-action="Delete" asp-route-id="@item.ID_BOOKING"><i class="fa-solid fa-delete-left text-black"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>



    

    <nav aria-label="booksPagination">
        <ul class="pagination">
            @{
                var cssStyle = "page-item";
                if (Model.BookingsIds.CurrentPage == 1)
                {
                    cssStyle += " disabled";
                }
            }
            <li class="@cssStyle">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="1">First</a>
            </li>

            @for (int p = Model.BookingsIds.FirstPageShow; p <= Model.BookingsIds.LastPageShow; p++)
            {
                cssStyle = "page-item";
                if (p == Model.BookingsIds.CurrentPage)
                {
                    cssStyle += " active";
                }

                <li class="@cssStyle">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@p">@p</a>
                </li>
            }

            @{
                cssStyle = "page-item";
                if (Model.BookingsIds.CurrentPage == Model.BookingsIds.TotalPages)
                {
                    cssStyle += " disabled";
                }
            }
            <li class="@cssStyle">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@Model.BookingsIds.TotalPages">Last</a>
            </li>
        </ul>
    </nav>
</body>
</html>

