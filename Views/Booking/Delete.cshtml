@model ReserveSystem.Models.Booking

@{
    var canDelete = ViewBag.CanDelete != null ? (bool)ViewBag.CanDelete : true;
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

@if (!canDelete)
{
    <div class="alert alert-warning">
        <strong>Warning:</strong> This booking cannot be deleted because the check-in date is less than 3 days away.
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID_BOOKING" />
        <a asp-action="Index" class="btn btn-primary ms-2">Back to list</a>
    </form>

    return;
}
    

<div class="container mt-5">
    <h1 class="text-danger text-center"><i class="bi bi-trash-fill"></i> Delete Room Type</h1>
    <p class="text-center text-muted">Are you sure you want to delete this room type? This action cannot be undone.</p>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 shadow-lg mt-4">
                <div class="card">
                    <div class="card-header bg-danger text-white">
                        <h5 class="text-center"><i class="bi bi-building"></i> Room Type Details</h5>
                    </div>
                </div>
                <div class="card-body">
                    <dl class="row">


                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-house-door"></i>Booked at:
                        </dt>
                        <dd class="col-sm-8 text-dark fw-bold">
                            @Html.DisplayFor(model => model.BOOKING_DATE)
                        </dd>


                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-house-door"></i>Booked dates:
                        </dt>
                        <dd class="col-sm-8 text-dark fw-bold">
                            between @Html.DisplayFor(model => model.CHECKIN_DATE) and @Html.DisplayFor(model => model.CHECKOUT_DATE)
                        </dd>


                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-house-door"></i>Number of people:
                        </dt>
                        <dd class="col-sm-8 text-dark fw-bold">
                            @Html.DisplayFor(model => model.TOTAL_PERSONS_NUMBER)
                        </dd>



                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-wheelchair"></i> Booked:
                        </dt>
                        <dd class="col-sm-8 text-dark fw-bold">
                            @if (Model.BOOKED)
                            {
                                <i class="fa fa-check text-success"></i> <!-- Visto verde -->
                            }
                            else
                            {
                                <i class="fa fa-times text-danger"></i> <!-- Cruz vermelha -->
                            }
                        </dd>
                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-wheelchair"></i> Paid:
                        </dt>
                        <dd class="col-sm-8 text-dark fw-bold">
                            @if (Model.PAYMENT_STATUS)
                            {
                                <i class="fa fa-check text-success"></i> <!-- Visto verde -->
                            }
                            else
                            {
                                <i class="fa fa-times text-danger"></i> <!-- Cruz vermelha -->
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center mt-4">
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
        <form asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" asp-for="ID_BOOKING" />
            <button type="submit" class="btn btn-danger m-2">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
        </form>
    </div>
</div>
