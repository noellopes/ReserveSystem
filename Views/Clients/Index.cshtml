@model IEnumerable<ReserveSystem.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center text-primary my-4">Clients List</h1>

<div class="container">
    <!-- Search Form -->
    <form asp-action="Index" method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="searchString" class="form-control" placeholder="Search by Client Name" value="@ViewData["CurrentFilter"]" />
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>
    <div class="row">
        <p>
            <a class="btn btn-success mb-3" asp-action="Create">Create New Client</a>
        </p>

        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm" style="border-radius: 10px; border: 1px solid #e0e0e0;">
                    <div class="card-body">
                        <h5 class="card-title text-primary">@item.Client_Name</h5>
                        <p class="card-text">
                            <strong>Phone:</strong> @item.Client_Phone <br />
                            <strong>Address:</strong> @item.Client_Adress <br />
                            <strong>Email:</strong> @item.Client_Email <br />
                            <strong>NIF:</strong> @item.Client_Nif <br />
                            <strong>Status:</strong> @(item.Client_Status ? "Active" : "Inactive") <br />
                            <strong>Login:</strong> @(item.Client_Login ? "Logged In" : "Not Logged In")
                        </p>

                        <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.ClientId">Edit</a>
                        <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.ClientId">Details</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.ClientId">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


<style>
    .card {
        background-color: #f9f9f9;
        transition: transform 0.3s;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

    .btn-info:hover {
        background-color: #138496;
        border-color: #117a8b;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }
</style>
