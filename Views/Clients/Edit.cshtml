@model ReserveSystem.Models.Client

@{
    ViewData["Title"] = "Edit Client";
}

<h1 class="page-title">Edit Client</h1>

<div class="form-container">
    <h4 class="form-header">Client Information</h4>
    <hr />
    <form asp-action="Edit" class="edit-form">
        <div asp-validation-summary="ModelOnly" class="validation-summary text-danger"></div>
        <input type="hidden" asp-for="ClientId" />

        <div class="form-group">
            <label asp-for="ClientName" class="control-label"></label>
            <input asp-for="ClientName" class="form-control" />
            <span asp-validation-for="ClientName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ClientEmail" class="control-label"></label>
            <input asp-for="ClientEmail" class="form-control" />
            <span asp-validation-for="ClientEmail" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ClientAddress" class="control-label"></label>
            <input asp-for="ClientAddress" class="form-control" />
            <span asp-validation-for="ClientAddress" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ClientNIF" class="control-label"></label>
            <input asp-for="ClientNIF" class="form-control" />
            <span asp-validation-for="ClientNIF" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ClientPhone" class="control-label"></label>
            <input asp-for="ClientPhone" class="form-control" />
            <span asp-validation-for="ClientPhone" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ClientLogin" class="control-label"></label>
            <input asp-for="ClientLogin" class="form-control" />
            <span asp-validation-for="ClientLogin" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ClientStatus" class="control-label"></label>
            <input asp-for="ClientStatus" class="form-control" />
            <span asp-validation-for="ClientStatus" class="text-danger"></span>
        </div>

        <div class="form-buttons">
            <input type="submit" value="Save" class="btn-save" />
            <a asp-action="Index" class="btn-back">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f3f0f8;
        color: #4b0082;
        padding: 20px;
    }

    .page-title {
        color: #4b0082;
        text-align: center;
        font-size: 2em;
        margin-bottom: 20px;
    }

    .form-container {
        max-width: 500px;
        margin: 0 auto;
        padding: 20px;
        background-color: #ffffff;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    .form-header {
        font-size: 1.5em;
        color: #4b0082;
        text-align: center;
        margin-bottom: 15px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .control-label {
        color: #6a0dad;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .form-control {
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .text-danger {
        font-size: 0.9em;
        color: #d9534f;
    }

    .form-buttons {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 20px;
    }

    .btn-save {
        background-color: #6a0dad;
        color: #ffffff;
        padding: 10px 20px;
        border: none;
        border-radius: 8px;
        font-size: 1em;
        cursor: pointer;
    }

    .btn-save:hover {
        background-color: #580d8a;
    }

    .btn-back {
        color: #4b0082;
        text-decoration: none;
        font-size: 1em;
        padding: 10px 20px;
        border-radius: 8px;
        background-color: #f3f0f8;
    }

    .btn-back:hover {
        color: #6a0dad;
    }
</style>
