@model ReserveSystem.Models.RoomServicePrice

@{
    ViewData["Title"] = "Edit Room Service Price";
}

<!-- Page Header -->
<div class="container my-4">
    <div class="row justify-content-center">
        <h1 class="text-center text-primary">Edit Room Service Price</h1>
    </div>
    <hr class="border-primary">
</div>

<!-- Edit Form -->
<div class="card border-secondary shadow-lg mx-auto" style="width: 75%;">
    <div class="card-header bg-dark text-light text-center">
        <h4>Edit Room Service Price Nº @Model?.ID_Room_Service_Price</h4>
    </div>
    <div class="card-body bg-dark text-light">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
            <input type="hidden" asp-for="ID_Room_Service_Price" />


            <!-- Two-Column Layout -->
            <div class="row">
                <!-- Input Fields -->
                <div class="col-md-6 mb-4">
                    <label asp-for="ID_Room_Service" class="form-label">Room Service:</label>
                    <div class="input-group">
                        <span class="input-group-text bg-dark text-light"><i class="bi bi-gear-fill"></i></span>
                        <select asp-for="ID_Room_Service" class="form-select bg-dark text-light" asp-items="ViewBag.RoomServices">
                            <option value="">Select a Room Service</option>
                        </select>
                    </div>
                    <span asp-validation-for="ID_Room_Service" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-4">
                    <label asp-for="Start_Date" class="form-label">Start Date:</label>
                    <div class="input-group">
                        <span class="input-group-text bg-dark text-light"><i class="bi bi-calendar-event-fill"></i></span>
                        <input asp-for="Start_Date" type="datetime-local" class="form-control bg-dark text-light" style="border: 1px solid white;" />
                    </div>
                    <span asp-validation-for="Start_Date" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-4">
                    <label asp-for="End_Date" class="form-label">End Date:</label>
                    <div class="input-group">
                        <span class="input-group-text bg-dark text-light"><i class="bi bi-calendar-check-fill"></i></span>
                        <input asp-for="End_Date" type="datetime-local" class="form-control bg-dark text-light" style="border: 1px solid white;" />
                    </div>
                    <span asp-validation-for="End_Date" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-4">
                    <label asp-for="Room_Service_Price" class="form-label">Price:</label>
                    <div class="input-group">
                        <span class="input-group-text bg-dark text-light"><i class="bi bi-currency-euro"></i></span>
                        <input asp-for="Room_Service_Price" type="number" min="0.00" step="0.01" max="99999999.99" class="form-control bg-dark text-light" style="border: 1px solid white;" />
                    </div>
                    <span asp-validation-for="Room_Service_Price" class="text-danger"></span>
                </div>

            </div>

            <!-- Action Buttons -->
            <div class="form-group text-center mt-4">
                <button type="submit" class="btn btn-outline-success mx-2">
                    <i class="bi bi-check-circle-fill me-2"></i>Save Changes
                </button>
                <a asp-action="Index" class="btn btn-outline-light mx-2">
                    <i class="bi bi-x-circle-fill me-2"></i>Cancel
                </a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
