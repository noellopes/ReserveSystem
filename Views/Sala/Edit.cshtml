@model ReserveSystem.Models.Sala

<h1>Edit Sala</h1>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="IdSala" />

    <div class="form-group">
        <label asp-for="HoraInicio" class="control-label">Hora Inicio</label>
        <input asp-for="HoraInicio" class="form-control" />
        <span asp-validation-for="HoraInicio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HoraFim" class="control-label">Hora Fim</label>
        <input asp-for="HoraFim" class="form-control" />
        <span asp-validation-for="HoraFim" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdTipoSala" class="control-label">Tipo Sala</label>
        <select asp-for="IdTipoSala" class="form-control" asp-items="ViewBag.IdTipoSala"></select>
        <span asp-validation-for="IdTipoSala" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}