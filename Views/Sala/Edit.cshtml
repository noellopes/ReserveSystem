@model ReserveSystem.Models.Sala

@{
    ViewData["Title"] = "Edit Room";
}

<h1>Edit Room</h1>

<form asp-action="Edit" method="post" class="card p-4 shadow-sm">
    <input type="hidden" asp-for="IdSala" />

    <div class="mb-3">
        <label asp-for="TempoPreparação" class="form-label">Preparation Time (HH:mm)</label>
        <input asp-for="TempoPreparação" class="form-control" placeholder="HH:mm" />
        <span asp-validation-for="TempoPreparação" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="HoraInicio" class="form-label">Start Time</label>
        <input asp-for="HoraInicio" class="form-control" type="time" />
        <span asp-validation-for="HoraInicio" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="HoraFim" class="form-label">End Time</label>
        <input asp-for="HoraFim" class="form-control" type="time" />
        <span asp-validation-for="HoraFim" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Floor" class="form-label">Floor</label>
        <input asp-for="Floor" class="form-control" />
        <span asp-validation-for="Floor" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="RoomNumber" class="form-label">Room Number</label>
        <input asp-for="RoomNumber" class="form-control" />
        <span asp-validation-for="RoomNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="IdTipoSala" class="form-label">Room Type</label>
        <select asp-for="IdTipoSala" class="form-select" asp-items="ViewBag.TipoSalaList"></select>
        <span asp-validation-for="IdTipoSala" class="text-danger"></span>
    </div>

    <div class="text-end">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
