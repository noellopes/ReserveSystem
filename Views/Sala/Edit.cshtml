@model ReserveSystem.Models.Sala

@{
ViewData["Title"] = "Edit Sala";
}

<h1>Edit Sala</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="IdSala" />
    <div class="form-group">
        <label asp-for="TempoPreparação" class="control-label"></label>
        <input asp-for="TempoPreparação" class="form-control" />
        <span asp-validation-for="TempoPreparação" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HoraInicio" class="control-label"></label>
        <input asp-for="HoraInicio" class="form-control" />
        <span asp-validation-for="HoraInicio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HoraFim" class="control-label"></label>
        <input asp-for="HoraFim" class="form-control" />
        <span asp-validation-for="HoraFim" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdTipoSala" class="control-label"></label>
        <select asp-for="IdTipoSala" class="form-control" asp-items="ViewBag.IdTipoSala"></select>
        <span asp-validation-for="IdTipoSala" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<p>
    <a asp-action="Index">Back to List</a>
</p>
