@model ReserveSystem.Models.Sala

<h1>Create Room</h1>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="HoraInicio">Start Time</label>
        <input asp-for="HoraInicio" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="HoraFim">End Time</label>
        <input asp-for="HoraFim" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IdTipoSala">Room Type</label>
        <select asp-for="IdTipoSala" class="form-control" asp-items="ViewBag.IdTipoSala"></select>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>