@model ReserveSystem.Models.Sala

<h1>Create Sala</h1>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="HoraInicio"></label>
        <input asp-for="HoraInicio" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="HoraFim"></label>
        <input asp-for="HoraFim" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IdTipoSala">Tipo Sala</label>
        <select asp-for="IdTipoSala" class="form-control" asp-items="ViewBag.IdTipoSala"></select>
    </div>
    <button type="submit" class="btn btn-success">Create</button>
</form>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>