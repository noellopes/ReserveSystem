@model ReserveSystem.Models.Sala

@{
    ViewData["Title"] = "Delete Room";
}

<h1>Delete Room</h1>

<h3>Are you sure you want to delete this room?</h3>

<div>
    <dl class="row">
        <dt>Preparation Time</dt>
        <dd>@Model.TempoPreparação.ToString(@"hh\:mm")</dd>

        <dt>Start Time</dt>
        <dd>@Model.HoraInicio.ToString("hh:mm tt")</dd>

        <dt>End Time</dt>
        <dd>@Model.HoraFim.ToString("hh:mm tt")</dd>

        <dt>Floor</dt>
        <dd>@Model.Floor</dd>

        <dt>Room Number</dt>
        <dd>@Model.RoomNumber</dd>

        <dt>Room Type</dt>
        <dd>@Model.TipoSala?.NomeSala</dd>
    </dl>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="IdSala" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
