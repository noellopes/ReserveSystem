@* ConfirmEdit.cshtml *@
@model ReserveSystem.Models.Sala

@{
    ViewData["Title"] = "Confirm Room Edit";
}

<div class="container">
    <h2>Confirm Room Edit</h2>

    <div class="alert alert-info">
        <p>Please review the details below before saving the changes:</p>
    </div>

    <dl class="row">
        <dt class="col-sm-3">Floor</dt>
        <dd class="col-sm-9">@Model.Floor</dd>

        <dt class="col-sm-3">Room Number</dt>
        <dd class="col-sm-9">@Model.RoomNumber</dd>

        <dt class="col-sm-3">Preparation Time</dt>
        <dd class="col-sm-9">@Model.TempoPreparação.ToString("hh\\:mm")</dd>

        <dt class="col-sm-3">Start Time</dt>
        <dd class="col-sm-9">@Model.HoraInicio.ToString("hh:mm tt")</dd>

        <dt class="col-sm-3">End Time</dt>
        <dd class="col-sm-9">@Model.HoraFim.ToString("hh:mm tt")</dd>

        <dt class="col-sm-3">Room Type</dt>
        <dd class="col-sm-9">@Model.TipoSala?.NomeSala</dd>
    </dl>

    <form asp-action="FinalizeEdit">
        @Html.HiddenFor(m => m.IdSala)
        @Html.HiddenFor(m => m.Floor)
        @Html.HiddenFor(m => m.RoomNumber)
        @Html.HiddenFor(m => m.TempoPreparação)
        @Html.HiddenFor(m => m.HoraInicio)
        @Html.HiddenFor(m => m.HoraFim)
        @Html.HiddenFor(m => m.IdTipoSala)

        <div class="form-group">
            <button type="submit" class="btn btn-success">Confirm</button>
            <a asp-action="Edit" asp-route-id="@Model.IdSala" class="btn btn-secondary">Go Back</a>
        </div>
    </form>
</div>