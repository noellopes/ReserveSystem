@model IEnumerable<ReserveSystem.Models.Sala>

<h1>List of Salas</h1>

@if (!Model.Any())
{
    <div class="alert alert-warning" role="alert">
        @ViewBag.EmptyMessage
    </div>
    <a asp-action="Create" class="btn btn-primary">Create New Sala</a>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>#</th>
            <th>Hora Inicio</th>
            <th>Hora Fim</th>
            <th>Tipo Sala</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var sala in Model)
        {
            <tr>
                <td>@sala.IdSala</td>
                <td>@sala.HoraInicio.ToString("g")</td>
                <td>@sala.HoraFim.ToString("g")</td>
                <td>@sala.TipoSala?.NomeAvaria ?? "Unassigned"</td>
                <td>
                    <a asp-action="Details" asp-route-id="@sala.IdSala" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@sala.IdSala" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@sala.IdSala" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <a asp-action="Create" class="btn btn-primary">Create New Sala</a>
}