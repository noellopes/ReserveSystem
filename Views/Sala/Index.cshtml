@model IEnumerable<ReserveSystem.Models.Sala>

@{
ViewData["Title"] = "Rooms";

    var message = TempData["Message"];
    if (message != null)
    {
        <div class="alert alert-success">
            @message
        </div>
    }
}

<h1 class="mb-4">Rooms</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">Create New Room</a>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
    <tr>
        <th>ID</th>
        <th>Preparation Time</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th>Room Type</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.IdSala</td>
        <td>@item.TempoPreparação.ToString(@"hh\:mm")</td>
        <td>@item.HoraInicio.ToString("HH:mm")</td>
        <td>@item.HoraFim.ToString("HH:mm")</td>
        <td>@item.TipoSala?.NomeSala </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.IdSala" class="btn btn-primary">Edit</a>
            <a asp-action="Details" asp-route-id="@item.IdSala" class="btn btn-sm btn-info">Details</a>
            <a asp-action="Delete" asp-route-id="@item.IdSala" class="btn btn-sm btn-danger">Delete</a>
        </td>
    </tr>
    }
    </tbody>
</table>
