@model ReserveSystem.Models.ViewModels.SalaViewModel

@{
    ViewData["Title"] = "Rooms";

    var message = TempData["Message"];
    if (message != null)
    {
        <div class="alert alert-success">@message</div>
    }

    var errorMessage = TempData["ErrorMessage"];
    if (errorMessage != null)
    {
        <div class="alert alert-danger">@errorMessage</div>
    }
}

<h1 class="mb-4">Rooms</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success me-2">Create New Room</a>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#filterModal">
        <i class="bi bi-search"></i> Search for a Specific Room
    </button>
</div>

<!-- Filter Modal -->
<div class="modal fade" id="filterModal" tabindex="-1" aria-labelledby="filterModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="filterModalLabel">Search Rooms</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Index" method="get">
                <div class="modal-body">
                    <!-- Room Type Dropdown -->
                    <div class="mb-3">
                        <label asp-for="RoomTypeFilter" class="form-label">Room Type</label>
                        <select name="roomType" class="form-select" asp-items="ViewBag.TipoSalaList">
                            <option value="">All</option>
                        </select>
                    </div>

                    <!-- Floor Dropdown -->
                    <div class="mb-3">
                        <label for="floor" class="form-label">Floor</label>
                        <select name="floor" class="form-select" asp-items="ViewBag.FloorList">
                            <option value="">All</option>
                        </select>
                    </div>
                    
                    <!-- Start Time Filter -->
                    <div class="mb-3">
                        <label for="startTime" class="form-label">Start Time</label>
                        <input type="time" name="startTime" class="form-control" value="@Model.StartTimeFilter?.ToString("HH:mm")"/>
                    </div>

                    <!-- End Time Filter -->
                    <div class="mb-3">
                        <label for="endTime" class="form-label">End Time</label>
                        <input type="time" name="endTime" class="form-control" value="@Model.EndTimeFilter?.ToString("HH:mm")"/>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Room List -->
<table class="table table-striped table-hover">
    <thead class="table-dark">
    <tr>
        <th>Preparation Time</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th>Floor</th>
        <th>Room Number</th>
        <th>Room Type</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var sala in Model.Salas)
    {
        <tr>
            <td>@sala.TempoPreparação.ToString(@"hh\:mm")</td>
            <td>@sala.HoraInicio.ToString("hh:mm tt")</td>
            <td>@sala.HoraFim.ToString("hh:mm tt")</td>
            <td>@sala.Floor</td>
            <td>@sala.RoomNumber</td>
            <td>@sala.TipoSala?.NomeSala</td>
            <td>
                <a asp-action="Edit" asp-route-id="@sala.IdSala" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Details" asp-route-id="@sala.IdSala" class="btn btn-sm btn-info">Details</a>
                <a asp-action="Delete" asp-route-id="@sala.IdSala" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<!-- Pagination -->
@if (Model.Pagination.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @if (Model.Pagination.ShowPrevious)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.Pagination.CurrentPage - 1)"
                       asp-route-roomType="@Model.RoomTypeFilter"
                       asp-route-floor="@Model.FloorFilter"
                       asp-route-startTime="@Model.StartTimeFilter?.ToString("HH:mm")"
                       asp-route-endTime="@Model.EndTimeFilter?.ToString("HH:mm")">
                        «
                    </a>
                </li>
            }

            @for (int p = Model.Pagination.FirstPageShow; p <= Model.Pagination.LastPageShow; p++)
            {
                <li class="page-item @(p == Model.Pagination.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@p"
                       asp-route-roomType="@Model.RoomTypeFilter"
                       asp-route-floor="@Model.FloorFilter"
                       asp-route-startTime="@Model.StartTimeFilter?.ToString("HH:mm")"
                       asp-route-endTime="@Model.EndTimeFilter?.ToString("HH:mm")">
                        @p
                    </a>
                </li>
            }

            @if (Model.Pagination.ShowNext)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.Pagination.CurrentPage + 1)"
                       asp-route-roomType="@Model.RoomTypeFilter"
                       asp-route-floor="@Model.FloorFilter"
                       asp-route-startTime="@Model.StartTimeFilter?.ToString("HH:mm")"
                       asp-route-endTime="@Model.EndTimeFilter?.ToString("HH:mm")">
                        »
                    </a>
                </li>
            }
        </ul>
    </nav>
}