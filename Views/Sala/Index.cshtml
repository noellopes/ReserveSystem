@model IEnumerable<ReserveSystem.Models.Sala>

<h1 class="text-center text-primary">Lista de Salas</h1>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        Nenhuma sala disponível no sistema. Clique abaixo para adicionar uma nova sala.
    </div>
    <a asp-action="Create" class="btn btn-primary">Criar Nova Sala</a>
}
else
{
    <div class="p-4 border rounded" style="background-color: #e6f7ff;">
        <table class="table table-bordered custom-table">
            <thead>
            <tr>
                <th>#</th>
                <th>Hora Início</th>
                <th>Hora Fim</th>
                <th>Tipo Sala</th>
                <th>Ações</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var sala in Model)
            {
                <tr>
                    <td>@sala.IdSala</td>
                    <td>@sala.HoraInicio.ToString("g")</td>
                    <td>@sala.HoraFim.ToString("g")</td>
                    <td>@sala.TipoSala?.NomeSala ?? "Não Atribuído"</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@sala.IdSala" class="btn btn-info btn-sm">Detalhes</a>
                        <a asp-action="Edit" asp-route-id="@sala.IdSala" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@sala.IdSala" class="btn btn-danger btn-sm">Excluir</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <a asp-action="Create" class="btn btn-primary">Criar Nova Sala</a>
    </div>
}