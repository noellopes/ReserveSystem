@model ReserveSystem.Models.Sala

@{
ViewData["Title"] = "Room Details";
}

<h1>Room Details</h1>

<div>
    <dl class="row">
        <dt>Preparation Time</dt>
        <dd>@Model.TempoPreparação.ToString(@"hh\:mm")</dd>

        <dt>Start Time</dt>
        <dd>@Model.HoraInicio.ToString("HH:mm")</dd>

        <dt>End Time</dt>
        <dd>@Model.HoraFim.ToString("HH:mm")</dd>

        <dt>Room Type</dt>
        <dd>@Model.TipoSala.NomeSala</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.IdSala" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
