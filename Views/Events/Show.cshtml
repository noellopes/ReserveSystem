@model IEnumerable<ReserveSystem.Models.Events>

<style>
    body {
        font-family: 'Georgia', serif;
        background-color: #f9f9f6; 
        color: #1a1a1a; 
    }

    /* Overall table styles */
    .table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        background-color: #ffffff;
    }

        /* Table Header Styles */
        .table thead {
            background-color: #333333; 
            color: white;
        }

        /* Table row hover effect */
        .table tbody tr:hover {
            background-color: #F5F5F5; 
            color: #d4af37; 
            cursor: pointer;
        }

        /* Table cell styles */
        .table th, .table td {
            padding: 18px 20px;
            text-align: left;
            font-size: 1.125rem;
            font-weight: 500;
        }

    /* Button styles */
    .btn {
        background-color: #ffffff;
        border-color: #d4af37;
        color: #333333;
        font-weight: 600;
        padding: 14px 28px;
        border-radius: 50px;
        font-size: 1.125rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

        .btn:hover {
            background-color: #333333;
            color: #F5F5F5;
            border-color: #333333;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            transform: translateY(-3px);
        }

        .btn:active {
            background-color: #000000;
            border-color: #000000;
            color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transform: translateY(0); 
        }

    .hr {
        border: none;
        height: 2px;
        background-color: #d4af37; 
        width: 60%;
        margin: 1rem auto;
        opacity: 0.8;
    }

    /* Centered title */
    h1 {
        font-size: 2rem;
        color: #d4af37; 
    }

    /* Adjusting the paragraph style for centered 'Create' button */
    p {
        text-align: center;
        margin-top: 2rem;
    }

</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const rows = document.querySelectorAll(".clickable-row");
        rows.forEach(row => {
            row.addEventListener("click", function () {
                window.location = this.dataset.href;
            });
        });
    });
</script>

<h1 class="text-center my-4">Event Index</h1>
<hr class="hr" />
<table class="table table-bordered my-4">
    <thead>
        <tr>
            <th>Event Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Fee</th>
            <th>Annual</th>
            <th>Municipal</th>
            <th>National</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="clickable-row" data-href="@Url.Action("Details", new { id = item.event_id })">
                <td>@Html.DisplayFor(modelItem => item.nameEv)</td>
                <td>@item.startDate.ToString("dd/MM/yyyy")</td>
                <td>@item.endDate.ToString("dd/MM/yyyy")</td>
                <td>@Html.DisplayFor(modelItem => item.fee)</td>
                <td>@(item.anual ? "Yes" : "No")</td>
                <td>@(item.municipal ? "Yes" : "No")</td>
                <td>@(item.national ? "Yes" : "No")</td>
            </tr>
        }
    </tbody>

</table>

<p>
    <a class="btn" asp-action="Create">Create New Event</a>
</p>