@model IEnumerable<ReserveSystem.Models.Transporte>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Matricula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoTransporte)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnoFabricacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoTipoTransporte)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Matricula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoTransporte)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnoFabricacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoTipoTransporte)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TransporteId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TransporteId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TransporteId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
