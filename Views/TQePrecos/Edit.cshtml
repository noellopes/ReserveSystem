@model ReserveSystem.Models.TQePreco

@{
    ViewData["Title"] = "Edit TQePreco";
}

<style>
    /* General Body Styling */
    body {
        font-family: 'Georgia', serif;
        background-color: #f9f9f6; /* Off-white background */
        color: #1a1a1a; /* Deep black for text */
    }

    /* Form Container Styles */
    .form-container {
        background: #ffffff; /* White background for container */
        padding: 4rem; /* Increased padding */
        border-radius: 16px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1); /* Soft shadow for depth */
        max-width: 750px; /* Wider form */
        margin: 3rem auto;
        transition: all 0.3s ease;
    }

    .form-container:hover {
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15); /* Stronger shadow on hover */
    }

    /* Heading Styles */
    h1 {
        font-size: 2rem;
        color: #d4af37; /* Gold for title */
    }

    /* Form Group and Label Styles */
    .form-group label {
        font-size: 1.2rem; /* Larger label text */
        color: #1a1a1a; /* Black for labels */
        font-weight: 600;
        margin-bottom: 0.5rem; /* Add space below the label */
    }

    /* Input Field Styles */
    .form-control {
        border-radius: 8px;
        border: 1px solid #cccccc;
        padding: 14px 18px; /* Increased padding */
        font-size: 1.1rem; /* Larger font size */
        transition: all 0.3s ease;
        background-color: #f9f9f9; /* Light off-white for input background */
        width: 100%; /* Full-width inputs */
    }

    .form-control:focus {
        border-color: #d4af37; /* Gold border on focus */
        box-shadow: 0 0 8px rgba(212, 175, 55, 0.2); /* Soft gold focus shadow */
        background-color: #ffffff; /* White background on focus */
    }

    /* Form Check Styles */
    .form-check-input:checked {
        background-color: #d4af37; /* Gold for checked boxes */
        border-color: #d4af37;
    }

    .form-check-label {
        color: #555555; /* Dark grey text */
        font-size: 1.1rem; /* Larger checkbox label */
    }

    /* Error Text Styling */
    .text-danger {
        font-size: 1rem;
        color: #cc0000; /* Red for error messages */
    }

    /* Primary Button Styles */
    .btn_edit {
        background-color: #ffffff;
        border-color: #d4af37;
        color: #333333;
        font-weight: 600;
        padding: 16px 32px; /* Larger button */
        border-radius: 50px;
        font-size: 1.25rem; /* Larger font size */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        width: 60%; /* Larger button width */
        margin-top: 2rem;
    }

    .btn_edit:hover {
        background-color: #333333;
        color: #F5F5F5;
        border-color: #d4af37;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        transform: translateY(-3px);
    }

    .btn_edit:active {
        background-color: #000000; /* Darker effect when clicked */
        border-color: #000000;
        color: white;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Return to original shadow */
        transform: translateY(0); /* Button "presses" down */
    }

    /* Back Button Styling */
    .btn_back {
        background-color: #333333;
        border-color: #d4af37;
        color: #ffffff;
        font-weight: 600;
        padding: 14px 28px;
        border-radius: 50px;
        font-size: 1.125rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

    .btn_back:hover {
        background-color: #ffffff;
        color: #d4af37;
        border-color: #d4af37;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        transform: translateY(-3px);
    }

    .hr {
        border: none;
        height: 2px;
        background-color: #d4af37; /* Gold */
        width: 60%;
        margin: 1rem auto;
        opacity: 0.8;
    }
</style>

<h1 class="text-center">Edit Base Price</h1>
<hr class="hr" />
<div class="form-container">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
        <input type="hidden" asp-for="RoomTypeId" />

        <!-- Exibição dos atributos como somente leitura -->
        <div class="form-group my-2">
            <label asp-for="type" class="control-label">Type</label>
            <input asp-for="type" class="form-control" readonly />
        </div>

        <div class="form-group my-2">
            <label asp-for="capacity" class="control-label">Capacity</label>
            <input asp-for="capacity" class="form-control" readonly />
        </div>

        <div class="form-group my-2">
            <label asp-for="RoomQuantity" class="control-label">Room Quantity</label>
            <input asp-for="RoomQuantity" class="form-control" readonly />
        </div>

        <div class="form-group my-2">
            <label asp-for="AcessibilityRoom" class="control-label">Accessibility Room</label>
            <input asp-for="AcessibilityRoom" class="form-control" readonly />
        </div>

        <div class="form-group my-2">
            <label asp-for="View" class="control-label">View</label>
            <input asp-for="View" class="form-control" readonly />
        </div>

        <div class="form-group my-2">
            <label asp-for="CancelationFee" class="control-label">Cancellation Fee</label>
            <input asp-for="CancelationFee" class="form-control" readonly />
        </div>

        <div class="form-group my-2">
            <label asp-for="AdicionalBeds" class="control-label">Additional Beds</label>
            <input asp-for="AdicionalBeds" class="form-control" readonly />
        </div>

        <div class="form-group my-2">
            <label asp-for="InUse" class="control-label">In Use</label>
            <input asp-for="InUse" class="form-control" readonly />
        </div>

        <!-- Campo editável para Base Price -->
        <div class="form-group my-2">
            <label asp-for="BasePrice" class="control-label">Base Price</label>
            <input asp-for="BasePrice" class="form-control" />
            <span asp-validation-for="BasePrice" class="text-danger"></span>
        </div>

        <!-- Botão de salvar -->
        <div class="form-group text-center my-2">
            <input type="submit" value="Save" class="btn btn_edit" />
        </div>
    </form>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn_back">Back to List</a>
    </div>
</div>
<hr class="hr" />



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

