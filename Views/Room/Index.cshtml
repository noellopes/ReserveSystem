@model IEnumerable<ReserveSystem.Models.RoomModel>

@{
    ViewData["Title"] = "Index";
}


<h1 style="width: 100%; font-family: 'Arial Rounded MT';">Escolha o seu quarto</h1>

<br>
<br />

<table class="table text-center" style="width: 100%; font-family: 'Arial Rounded MT';">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoomType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomType.RoomCapacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomType.HasView)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomType.AcessibilityRoom)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomType.Type) <!-- Exibindo o nome do tipo de quarto -->
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomType.RoomCapacity) <!-- Exibindo a capacidade -->
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomType.HasView) <!-- Exibindo se o quarto tem vista -->
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomType.AcessibilityRoom) <!-- Exibindo se o quarto é adaptado -->
                </td>
                <td>
                    <a asp-controller="Reservas" asp-action="Create" asp-route-id="@item.RoomTypeId" class="btn btn-primary" style="background-color: #6f42c1; border-color: #6f42c1;">
                        <i class="bi bi-journal-plus"></i> Adicionar a reserva
                    </a> |
                </td>
            </tr>
        }
    </tbody>
</table>
 </tbody>
