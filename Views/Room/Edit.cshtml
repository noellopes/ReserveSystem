@model ReserveSystem.Models.RoomModel

@{
    ViewData["Title"] = "Edit Room Type";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-light text-dark text-center">
                    <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Room Type</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Campo de Tipo de Quarto -->
                        <div class="form-group">
                            <label asp-for="RoomType.Type" class="control-label"></label>
                            <input asp-for="RoomType.Type" class="form-control" />
                            <span asp-validation-for="RoomType.Type" class="text-danger"></span>
                        </div>

                        <!-- Campo de Capacidade do Quarto -->
                        <div class="form-group">
                            <label asp-for="RoomType.RoomCapacity" class="control-label"></label>
                            <input asp-for="RoomType.RoomCapacity" class="form-control" />
                            <span asp-validation-for="RoomType.RoomCapacity" class="text-danger"></span>
                        </div>

                        <!-- Campo de Visibilidade -->
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="RoomType.HasView" />
                                @Html.DisplayNameFor(model => model.RoomType.HasView)
                            </label>
                        </div>

                        <!-- Campo de Acessibilidade -->
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="RoomType.AcessibilityRoom" />
                                @Html.DisplayNameFor(model => model.RoomType.AcessibilityRoom)
                            </label>
                        </div>

                        <!-- Botão de Envio -->
                        <div class="form-group text-center">
                            <input type="submit" value="Save Changes" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3 text-center">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}