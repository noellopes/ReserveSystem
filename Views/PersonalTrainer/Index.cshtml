@model IEnumerable<ReserveSystem.Models.PersonalTrainerModel>

@{
    ViewData["Title"] = "Personal Trainers";
}

<!-- Título da Página -->
<div class="container my-5">
    <h1 class="text-center my-4 text-dark fw-bold" style="font-family: 'Poppins', sans-serif;">Lista de Personal Trainers</h1>

    <!-- Botão para Criar Novo Personal Trainer -->
    <div class="text-center mb-4">
        <a asp-action="Create" class="btn btn-dark btn-lg rounded-pill px-5 shadow">
            <i class="bi bi-person-plus-fill"></i> Adicionar Novo Personal Trainer
        </a>
    </div>

    <!-- Tabela de Personal Trainers -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Email</th>
                    <th scope="col">Telefone</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                        <td class="text-center">
                            <!-- Botão Ver -->
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm shadow" title="Ver detalhes">
                                <i class="bi bi-eye"></i> Ver
                            </a>
                            <a asp-action="Index" asp-controller="Booking" asp-route-id="@item.Id" class="btn btn-secondary btn-sm" title="Ver marcações">
                                <i class="fa fa-clock"></i> Horário
                            </a>
                            <!-- Botão Editar -->
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm shadow" title="Editar">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <!-- Botão Deletar -->
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm shadow" title="Deletar">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Script de ícones Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.min.js"></script>
