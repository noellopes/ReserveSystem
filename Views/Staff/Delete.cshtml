@model ReserveSystem.Models.Staff

<h2>Delete Staff</h2>

<div>
    <h4>Are you sure you want to delete this staff?</h4>
    <h3>@Model.StaffName</h3>
    <dl class="row">
        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Model.StaffEmail</dd>

        <dt class="col-sm-2">Department:</dt>
        <dd class="col-sm-10">@Model.StaffDept</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="StaffID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
