@model IEnumerable<ReserveSystem.Models.StaffModel>

@{
    ViewData["Title"] = "Staff List";
    var pagingInfo = (PagingInfo)ViewBag.PagingInfo;
    string searchString = ViewBag.SearchString as string;
}

<h1>Staff Members</h1>
<div class="d-flex justify-content-between align-items-center mb-3">
    <!-- Add New Staff Button -->
    <a asp-action="Create" class="btn btn-primary">Add New Staff</a>
    <!-- Search Form -->
    <form method="get" asp-action="Index" class="d-flex">
        <input type="text" name="searchString" value="@searchString" class="form-control" placeholder="Name, Email, or Phone" />
        <button type="submit" class="btn btn-primary ms-2">Search</button>
        
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>BirthDate</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Password</th>
            <th>Job</th>
            <th>StartFunctionsDate</th>
            <th>EndFunctionsDate</th>
            <th>Driving License Grades</th>
            <th>Driver License Expiration Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var staff in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => staff.Staff_Id)</td>
                <td>@Html.DisplayFor(modelItem => staff.Staff_Name)</td>
                <td>@staff.BirthDate.ToString("dd/MM/yyyy")</td>
                <td>@Html.DisplayFor(modelItem => staff.Staff_Email)</td>
                <td>@Html.DisplayFor(modelItem => staff.Staff_Phone)</td>
                <td>@Html.DisplayFor(modelItem => staff.Staff_Password)</td>
                <td>@Html.DisplayFor(modelItem => staff.Job.jobName)</td>
                <td>@staff.StartFunctionsDate.ToString("dd/MM/yyyy")</td>
                <td>@staff.EndFunctionsDate.ToString("dd/MM/yyyy")</td>
                
                <td>
                    @if (staff.DrivingLicenseGrades != null && staff.DrivingLicenseGrades.Any())
                    {
                        @string.Join(", ", staff.DrivingLicenseGrades)
                    }
                    else
                    {
                        <span>No Driving License Grades</span>
                    }
                </td>
                <td>@staff.DriverLicenseExpirationDate.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@staff.Staff_Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@staff.Staff_Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@staff.Staff_Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        <!-- First and Previous -->
        @if (pagingInfo.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("Index", new { page = 1 })">First</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="@Url.Action("Index", new { page = pagingInfo.CurrentPage - 1 })">Previous</a>
            </li>
        }

        <!-- Page Numbers -->
        @for (int i = pagingInfo.FirstPageShow; i <= pagingInfo.LastPageShow; i++)
        {
            <li class="page-item @(i == pagingInfo.CurrentPage ? "active" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
            </li>
        }

        <!-- Next and Last -->
        @if (pagingInfo.CurrentPage < pagingInfo.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("Index", new { page = pagingInfo.CurrentPage + 1 })">Next</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="@Url.Action("Index", new { page = pagingInfo.TotalPages })">Last</a>
            </li>
        }
    </ul>
</nav>

