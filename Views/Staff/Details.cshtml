@model ReserveSystem.Models.StaffModel

@{
    ViewData["Title"] = "Details";
}

<h1>Staff Details</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff_Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff_Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff_Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff_Name)
        </dd>

        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Model.BirthDate.ToString("dd/MM/yyyy")
        </dd>

        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff_Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff_Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff_Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff_Phone)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff_Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff_Password)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.jobID_FK)  
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Job.jobName)  
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartFunctionsDate)
        </dt>
        <dd class="col-sm-10">
            @Model.StartFunctionsDate.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndFunctionsDate)
        </dt>
        <dd class="col-sm-10">
            @Model.EndFunctionsDate.ToString("dd/MM/yyyy")
        </dd>

        
        <dt class="col-sm-2">
            Driving License Grades
        </dt>
        <dd class="col-sm-10">
            @if (Model.DrivingLicenseGrades != null && Model.DrivingLicenseGrades.Any())
            {
                foreach (var grade in Model.DrivingLicenseGrades)
                {
                    <p>@grade</p>
                }
            }
            else
            {
                <p>No grades assigned</p>
            }
        </dd>

        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DriverLicenseExpirationDate)
        </dt>
        <dd class="col-sm-10">
            @Model.DriverLicenseExpirationDate.ToString("dd/MM/yyyy")
        </dd>

    </dl>
</div>

<div>
    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model?.Staff_Id">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

