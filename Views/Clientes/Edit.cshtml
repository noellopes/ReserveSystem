@model ReserveSystem.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<h1 class="page-title">Editar Cliente</h1>

<div class="form-container">
    <h4 class="form-header">Informações do Cliente</h4>
    <hr />
    <form asp-action="Edit" class="edit-form">
        <div asp-validation-summary="ModelOnly" class="validation-summary text-danger"></div>
        <input type="hidden" asp-for="ClienteId" />

        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Morada" class="control-label"></label>
            <input asp-for="Morada" class="form-control" />
            <span asp-validation-for="Morada" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NIF" class="control-label"></label>
            <input asp-for="NIF" class="form-control" />
            <span asp-validation-for="NIF" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DataNascimento" class="control-label"></label>
            <input asp-for="DataNascimento" class="form-control" />
            <span asp-validation-for="DataNascimento" class="text-danger"></span>
        </div>

        <div class="form-buttons">
            <input type="submit" value="Salvar" class="btn-save" />
            <a asp-action="Index" class="btn-back">Voltar para Lista</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f3f0f8;
        color: #4b0082;
        padding: 20px;
    }

    .page-title {
        color: #4b0082;
        text-align: center;
        font-size: 2em;
        margin-bottom: 20px;
    }

    .form-container {
        max-width: 500px;
        margin: 0 auto;
        padding: 20px;
        background-color: #ffffff;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    .form-header {
        font-size: 1.5em;
        color: #4b0082;
        text-align: center;
        margin-bottom: 15px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .control-label {
        color: #6a0dad;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .form-control {
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .text-danger {
        font-size: 0.9em;
        color: #d9534f;
    }

    .form-buttons {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 20px;
    }

    .btn-save {
        background-color: #6a0dad;
        color: #ffffff;
        padding: 10px 20px;
        border: none;
        border-radius: 8px;
        font-size: 1em;
        cursor: pointer;
    }

        .btn-save:hover {
            background-color: #580d8a;
        }

    .btn-back {
        color: #4b0082;
        text-decoration: none;
        font-size: 1em;
        padding: 10px 20px;
        border-radius: 8px;
        background-color: #f3f0f8;
    }

        .btn-back:hover {
            color: #6a0dad;
        }
</style>
