@model ReserveSystem.Models.ClienteModel

@{
    ViewData["Title"] = "Create";
}

<h3 class="text-center">
    <i class="bi bi-person-plus"></i> Cliente
</h3>

<div class="d-flex justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" method="post" class="border p-5 rounded shadow-sm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control bg-light " type="text" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control bg-light" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Telefone" class="control-label "></label>
                <input asp-for="Telefone" class="form-control bg-light" type="tel" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>

            <div class="form-group form-check mb-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Login" type="checkbox" />
                    <span>Login</span>
                </label>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Nif" class="control-label"></label>
                <input asp-for="Nif" class="form-control bg-light" type="text" />
                <span asp-validation-for="Nif" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mb-3">
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

 

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
