@model ReserveSystem.Models.Cliente

@{
    ViewData["Title"] = "Detalhes";
}

<h1 class="page-title">Detalhes do Cliente</h1>

<div class="details-container">
    <h4 class="form-header">Informações do Cliente</h4>
    <hr />
    <dl class="detail-list">
        <dt>@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd>@Html.DisplayFor(model => model.Nome)</dd>

        <dt>@Html.DisplayNameFor(model => model.Email)</dt>
        <dd>@Html.DisplayFor(model => model.Email)</dd>

        <dt>@Html.DisplayNameFor(model => model.Morada)</dt>
        <dd>@Html.DisplayFor(model => model.Morada)</dd>

        <dt>@Html.DisplayNameFor(model => model.NIF)</dt>
        <dd>@Html.DisplayFor(model => model.NIF)</dd>

        <dt>@Html.DisplayNameFor(model => model.DataNascimento)</dt>
        <dd>@Html.DisplayFor(model => model.DataNascimento)</dd>
    </dl>

    <div class="form-buttons">
        <a asp-action="Edit" asp-route-id="@Model?.ClienteId" class="btn-edit">Editar</a>
        <a asp-action="Index" class="btn-back">Voltar para Lista</a>
    </div>
</div>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f3f0f8;
        color: #4b0082;
        padding: 20px;
    }

    .page-title {
        color: #4b0082;
        text-align: center;
        font-size: 2em;
        margin-bottom: 20px;
    }

    .details-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #ffffff;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    .form-header {
        font-size: 1.5em;
        color: #4b0082;
        text-align: center;
        margin-bottom: 15px;
    }

    .detail-list dt {
        font-weight: bold;
        color: #6a0dad;
        margin-top: 10px;
    }

    .detail-list dd {
        margin-left: 0;
        padding: 5px 0 10px;
        border-bottom: 1px solid #e9e0f7;
    }

    .form-buttons {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 20px;
    }

    .btn-edit {
        background-color: #6a0dad;
        color: #ffffff;
        padding: 10px 20px;
        border: none;
        border-radius: 8px;
        font-size: 1em;
        text-decoration: none;
        text-align: center;
    }

        .btn-edit:hover {
            background-color: #580d8a;
        }

    .btn-back {
        color: #4b0082;
        text-decoration: none;
        font-size: 1em;
        padding: 10px 20px;
        border-radius: 8px;
        background-color: #f3f0f8;
    }

        .btn-back:hover {
            color: #6a0dad;
        }
</style>
