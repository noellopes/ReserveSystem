@model IEnumerable<ReserveSystem.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telemovel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telemovel)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.IdCliente" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdCliente" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdCliente" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
