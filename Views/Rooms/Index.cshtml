@model IEnumerable<ReserveSystem.Models.Rooms>

@{
    ViewData["Title"] = "Index";
}


<h1>Escolha o seu quarto</h1>

<br> <br/>

<table class="table text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoomType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfRooms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasView)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdaptedRoom)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoomType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfRooms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasView)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdaptedRoom)
            </td>
            <td>
                    <a asp-controller="Reservas" asp-action="Create" asp-route-id="@item.RoomTypeId" class="btn btn-primary" style="background-color: #6f42c1; border-color: #6f42c1;"><i class="bi bi-journal-plus"></i> Adicionar a reserva</a> |
            </td>
        </tr>
}
    
</table>
 </tbody>

