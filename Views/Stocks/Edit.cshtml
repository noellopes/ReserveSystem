@model ReserveSystem.Models.Stock

@{
    ViewData["Title"] = "Edit";
}

<style>
    .form-control {
        margin-bottom: 15px;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .text-danger {
        font-size: 0.9em;
    }

    a {
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            color: #0056b3;
            text-decoration: underline;
        }
</style>

<div class="container mt-4">
    <h1 class="text-center text-primary">Editar Estoque</h1>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="StockID" />
                <div class="form-group">
                    <label asp-for="IngredientID" class="control-label"></label>
                    <select asp-for="IngredientID" class="form-control" asp-items="ViewBag.IngredientID"></select>
                    <span asp-validation-for="IngredientID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AvailableQuantity" class="control-label"></label>
                    <input asp-for="AvailableQuantity" class="form-control" />
                    <span asp-validation-for="AvailableQuantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastModificationDate" class="control-label"></label>
                    <input asp-for="LastModificationDate" class="form-control" />
                    <span asp-validation-for="LastModificationDate" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="text-center mt-3">
        <a asp-action="Index">Voltar à Lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
