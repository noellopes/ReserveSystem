@model IEnumerable<ReserveSystem.Models.Promos>

<style>
    /* Manteniendo tus estilos originales */
    body {
        font-family: 'Georgia', serif;
        background-color: #f9f9f6;
        color: #1a1a1a;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        background-color: #ffffff;
    }

    .table thead {
        background-color: #333333;
        color: white;
    }

    .table tbody tr:hover {
        background-color: #F5F5F5;
        color: #d4af37;
        cursor: pointer;
    }

    .table th, .table td {
        padding: 18px 20px;
        text-align: left;
        font-size: 1.125rem;
        font-weight: 500;
    }

    .btn {
        background-color: #ffffff;
        border-color: #d4af37;
        color: #333333;
        font-weight: 600;
        padding: 14px 28px;
        border-radius: 50px;
        font-size: 1.125rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

    .btn:hover {
        background-color: #333333;
        color: #F5F5F5;
        border-color: #333333;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        transform: translateY(-3px);
    }

    .btn:active {
        background-color: #000000;
        border-color: #000000;
        color: white;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transform: translateY(0);
    }

    .hr {
        border: none;
        height: 2px;
        background-color: #d4af37;
        width: 60%;
        margin: 1rem auto;
        opacity: 0.8;
    }

    h1 {
        font-size: 2rem;
        color: #d4af37;
    }

    p {
        text-align: center;
        margin-top: 2rem;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const rows = document.querySelectorAll(".clickable-row");
        rows.forEach(row => {
            row.addEventListener("click", function () {
                window.location = this.dataset.href;
            });
        });
    });
</script>

<h1 class="text-center my-4">Promos Index</h1>
<hr class="hr" />

<!-- Formulario de búsqueda -->
<form method="get" action="/Promos/Index" class="text-center">
    <input type="text" name="searchTerm" placeholder="Search promotions..." value="@ViewBag.SearchTerm" />
    <button class="btn" type="submit">Search</button>
</form>

<table class="table table-bordered my-4">
    <thead>
        <tr>
            <th>Event Name</th>
            <th>Code</th>
            <th>Discount</th>
            <th>Promo State</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="clickable-row" data-href="@Url.Action("Details", new { id = item.Id_Prom })">
                <td>@Html.DisplayFor(modelItem => item.Events.nameEv)</td>
                <td>@Html.DisplayFor(modelItem => item.evCode)</td>
                <td>@Html.DisplayFor(modelItem => item.discount)</td>
                <td>@(item.promState ? "Active" : "Not Active")</td>
            </tr>
        }
    </tbody>
</table>

<!-- Controles de paginación -->
<div class="pagination-controls text-center">
    @if (ViewBag.PageNumber > 1)
    {
        <a class="btn" href="/Promos/Index?pageNumber=@(ViewBag.PageNumber - 1)&searchTerm=@ViewBag.SearchTerm">Previous</a>
    }

    <span>Page @ViewBag.PageNumber</span>

    @if ((ViewBag.PageNumber * ViewBag.PageSize) < ViewBag.TotalItems)
    {
        <a class="btn" href="/Promos/Index?pageNumber=@(ViewBag.PageNumber + 1)&searchTerm=@ViewBag.SearchTerm">Next</a>
    }
</div>

<p>
    <a class="btn" asp-action="Create">Create New Promo</a>
</p>

<p>
    <a class="btn" asp-controller="Events" asp-action="Show">Back to List</a>
</p>
