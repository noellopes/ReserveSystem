<div>
    <h4>Staff Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff_Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff_Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff_Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff_Email)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff_Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff_Password)
        </dd>

        <!-- Exibindo o Job associado -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Job_Id)
        </dt>
