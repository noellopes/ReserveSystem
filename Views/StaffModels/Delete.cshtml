        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DrivingLicenseGrades)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DrivingLicenseGrades)
        </dd>

