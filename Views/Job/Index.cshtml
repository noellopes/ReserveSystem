@model IEnumerable<ReserveSystem.Models.Job>

<h2>Job List</h2>

<!-- Filtreleme Formu -->
<form method="get" asp-action="Index" class="form-inline mb-3">
    <input type="text" name="search" value="@ViewBag.Search" placeholder="Search jobs..." class="form-control mr-2" />
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

<a asp-action="Create" class="btn btn-success mb-3">Create New Job</a>

<table class="table table-striped">
    <thead>
        <tr>
            
            <th>Job ID</th>
            <th>Job Name</th>
            <th>Job Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1; // Sayaç başlatılıyor
        }
        @foreach (var job in Model)
        {
            <tr>
                
                <td>@job.JobId</td>
                <td>@job.JobName</td>
                <td>@job.JobDescription</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@job.JobId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@job.JobId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
            index++; // Sayaç artırılıyor
        }
    </tbody>
</table>

<!-- Pagination -->
<nav>
    <ul class="pagination">
        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)" asp-route-search="@ViewBag.Search">Previous</a>
        </li>
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-search="@ViewBag.Search">@i</a>
            </li>
        }
        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)" asp-route-search="@ViewBag.Search">Next</a>
        </li>
    </ul>
</nav>
