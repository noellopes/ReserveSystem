@model ReserveSystem.Models.Job

<h2>Create Job</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="JobName" class="form-label"></label>
        <input asp-for="JobName" class="form-control" />
        <span asp-validation-for="JobName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="JobDescription" class="form-label"></label>
        <textarea asp-for="JobDescription" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
