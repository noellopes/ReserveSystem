@model ReserveSystem.Models.Job

@{
    ViewData["Title"] = "Delete Job";
}

<!-- Page Header -->
<div class="container my-4">
    <div class="row justify-content-center">
        <h1 class="text-center text-danger">Delete Job</h1>
    </div>
    <hr class="border-danger">
</div>

<!-- Delete Form -->
<div class="card border-danger shadow-lg mx-auto" style="width: 75%;">
    <div class="card-header bg-dark text-light text-center">
        <h4>Delete Job Nº @Model?.Job_ID</h4>
    </div>
    <div class="card-body bg-dark text-light">
        <div class="row">
            <!-- Details -->
            <div class="col-md-6 mb-4">
                <label class="form-label">Name:</label>
                <div class="input-group">
                    <span class="input-group-text bg-dark text-light"><i class="bi bi-gear-fill"></i></span>
                    <input type="text" class="form-control bg-dark text-light" value="@Model?.Job_Name" readonly />
                </div>
            </div>

           
            <div class="col-md-6 mb-4">
                <label class="form-label">Description:</label>
                <div class="input-group">
                    <span class="input-group-text bg-dark text-light"><i class="bi bi-person-badge-fill"></i></span>
                    <input type="text" class="form-control bg-dark text-light" value="@Model?.Job_Description" readonly />
                </div>
            </div>

         </div>
    </div>

    <!-- Action Buttons -->
    <div class="card-footer bg-dark text-center">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="Job_ID" />
            <button type="submit" class="btn btn-outline-danger mx-2">
                <i class="bi bi-trash-fill me-2"></i>Delete
            </button>
        </form>
        <a asp-action="Index" class="btn btn-outline-light mx-2">
            <i class="bi bi-x-circle-fill me-2"></i>Cancel
        </a>
    </div>
</div>