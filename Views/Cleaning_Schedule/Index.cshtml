@model IEnumerable<ReserveSystem.Models.Cleaning_Schedule>

@{
    ViewData["Title"] = "Index";
    bool? filterPending = ViewBag.FilterPending;
}

<div class="container mt-4">
    <h1 class="text-center text-primary mb-4">Cleaning Schedule Overview</h1>

        <!-- Filtro -->
    <form method="get" class="mb-3">
        <label for="filterPending" class="form-label">Show Pending Cleanings Only:</label>
        <select name="filterPending" class="form-select" onchange="this.form.submit()">
            <option value="">All</option>
            <option value="true" selected="@(filterPending == true)">Pending</option>
            <option value="false" selected="@(filterPending == false)">Completed</option>
        </select>
    </form>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <div class="row">
        @foreach (var item in Model.Where(i => !filterPending.HasValue || (filterPending == true && !i.CleaningDone) || (filterPending == false && i.CleaningDone)))
        
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm border-primary">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">Room Booking: @item.RoomBookingId</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Client Address:</strong> @item.client.Client_Adress</p>
                        <p><strong>Staff License:</strong> @item.staffMembers.StaffDriversLicense</p>
                        <p><strong>Service Date:</strong> @item.DateServices.ToString("yyyy-MM-dd")</p>
                        <p><strong>Start Time:</strong> @item.StartTime.ToString("HH:mm")</p>
                        <p><strong>End Time:</strong> @item.EndTime.ToString("HH:mm")</p>
                        <p>
                            <strong>Cleaning Status:</strong>
                            @if (item.CleaningDone)
                            {
                                <span class="badge bg-success">Completed</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                        </p>

                        <!-- Cleaning Preferences -->
                        <p><strong>Cleaning Preferences:</strong></p>
                        @if (item.CleaningDesired)
                        {
                            <div>
                                <span class="text-success">Cleaning desired</span>
                                @if (item.PreferredCleaningStartTime.HasValue && item.PreferredCleaningEndTime.HasValue)
                                {
                                    <p>
                                        Preferred Time:
                                        @item.PreferredCleaningStartTime.Value.ToString("HH:mm") -
                                        @item.PreferredCleaningEndTime.Value.ToString("HH:mm")
                                    </p>
                                }
                                else
                                {
                                    <p>No specific time selected.</p>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-danger">No cleaning requested</p>
                        }
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@item.CleaningScheduleId" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.CleaningScheduleId" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i> Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.CleaningScheduleId" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

