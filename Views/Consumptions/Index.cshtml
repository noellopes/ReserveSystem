@model IEnumerable<ReserveSystem.Models.Consumptions>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <h1 class="text-center text-primary mb-4">Consumptions Overview</h1>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm border-info">
                    <div class="card-header bg-info text-white">
                        <h5 class="card-title mb-0">Room ID: @item.RoomId</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Item ID:</strong> @item.ItemId</p>
                        <p><strong>Quantity Consumed:</strong> @item.QuantityConsumed</p>
                        <p><strong>Consumption Date:</strong> @item.ConsumedDate.ToString("yyyy-MM-dd")</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@item.ConsumptionId" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.ConsumptionId" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i> Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.ConsumptionId" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

