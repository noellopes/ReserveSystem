@model IEnumerable<ReserveSystem.Models.Cleaning>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CleaningService)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.room)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CleaningService)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.room.RoomId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CleaningId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CleaningId">Details</a> |
