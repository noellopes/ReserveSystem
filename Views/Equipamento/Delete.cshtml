@model ReserveSystem.Models.Equipamento


<div class="container mt-4">
    <h1>Delete Equipment</h1>
    <div>
        <h4>Are you sure you want to delete this equipment?</h4>
        <div>
            <h5>@Model.NomeEquipamento</h5>
            <p>
                <strong>Tipo:</strong> @Model.TipoEquipamento<br />
                <strong>Quantidade:</strong> @Model.Quantidade
            </p>
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="IdEquipamento" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
