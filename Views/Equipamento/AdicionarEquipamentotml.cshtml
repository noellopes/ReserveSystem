@model ReserveSystem.Models.Equipamento

<h2>Criar Novo Equipamento</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="NomeEquipamento">Nome do Equipamento</label>
        <input type="text" class="form-control" id="NomeEquipamento" name="NomeEquipamento" required />
    </div>
    <div class="form-group">
        <label for="TipoEquipamento">Tipo do Equipamento</label>
        <input type="text" class="form-control" id="TipoEquipamento" name="TipoEquipamento" required />
    </div>
    <div class="form-group">
        <label for="Quantidade">Quantidade</label>
        <input type="number" class="form-control" id="Quantidade" name="Quantidade" required />
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
