@model IEnumerable<ReserveSystem.Models.Equipamento>


<div class="container mt-4">
    <h1>Equipment List</h1>
    <div class="row">
        @foreach (var equipamento in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    @{
                        var imageUrl = Url.Content("wwwroot/images/equipamento/" + equipamento.IdEquipamento + ".jpg");
                        Console.WriteLine($"Generated Image URL: {imageUrl}");
                    }
                    <img src="@imageUrl" class="card-img-top" alt="@equipamento.NomeEquipamento">
                    <div class="card-body">
                        <h5 class="card-title">@equipamento.NomeEquipamento</h5>
                        <p class="card-text">
                            <strong>Tipo:</strong> @equipamento.TipoEquipamento<br>
                            <strong>Quantidade:</strong> @equipamento.Quantidade
                        </p>
                        <a href="@Url.Action("Edit", "Equipamento", new { id = equipamento.IdEquipamento })" class="btn btn-primary">Edit</a>
                        <a href="@Url.Action("ReportIssue", "Equipamento", new { id = equipamento.IdEquipamento })" class="btn btn-warning">Report Issue</a>
                        <a href="@Url.Action("Delete", "Equipamento", new { id = equipamento.IdEquipamento })" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
