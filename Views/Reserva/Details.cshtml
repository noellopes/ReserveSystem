@model ReserveSystem.Models.Reserva

@{
    ViewData["Title"] = "Reservation Details";
}

<h2>Reservation Details</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Reservation Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataReserva)
        </dd>
        <dt class="col-sm-2">
            Start Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataInicio)
        </dd>
        <dt class="col-sm-2">
            End Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataFim)
        </dd>
        <dt class="col-sm-2">
            Participants
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalParticipantes)
        </dd>
        <dt class="col-sm-2">
            Total Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrecoTotal)
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
        <dt class="col-sm-2">
            Status Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataEstado)
        </dd>
        <dt class="col-sm-2">
            Reservation Type
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoReserva.NomeReserva)
        </dd>

        <dt class="col-sm-2">
            Equipment Type
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Equipamento.NomeEquipamento)  
        </dd>

        <dt class="col-sm-2">
            Client ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroCliente)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.IdReserva" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
