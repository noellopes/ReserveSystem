@model ReserveSystem.Models.Reserva

@{
    ViewData["Title"] = "Edit Reservation";
}

<h1>Edit Reservation</h1>

<<form asp-action="Edit" method="post" class="card p-4 shadow-sm">
    <input type="hidden" asp-for="IdReserva" />

   
    <div class="mb-3">
        <label asp-for="IdTipoReserva" class="control-label">Reservation Type</label>
        <select asp-for="IdTipoReserva" class="form-select" asp-items="ViewBag.TipoReserva"></select>
        <span asp-validation-for="IdTipoReserva" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <label asp-for="IdEquipamento" class="control-label">Equipment Type</label>
        <select asp-for="IdEquipamento" class="form-select" asp-items="ViewBag.TipoEquipamento"></select>
        <span asp-validation-for="IdEquipamento" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DataInicio" class="control-label">Start Date</label>
        <input asp-for="DataInicio" class="form-control" type="datetime-local" />
        <span asp-validation-for="DataInicio" class="text-danger"></span>
    </div>

   
    <div class="mb-3">
        <label asp-for="DataFim" class="control-label">End Date</label>
        <input asp-for="DataFim" class="form-control" type="datetime-local" />
        <span asp-validation-for="DataFim" class="text-danger"></span>
    </div>

    
    <div class="mb-3">
        <label asp-for="TotalParticipantes" class="control-label">Total Participants</label>
        <input asp-for="TotalParticipantes" class="form-control" />
        <span asp-validation-for="TotalParticipantes" class="text-danger"></span>
    </div>

    <div class="text-end">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
