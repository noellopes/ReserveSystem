@model ReserveSystem.Models.Reserva

@{
    ViewData["Title"] = "Delete Reservation";
}

<h2>Delete Reservation</h2>

<h3>Are you sure you want to delete this reservation?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Reservation Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataReserva)
        </dd>
        <dt class="col-sm-2">
            Start Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataInicio)
        </dd>
        <dt class="col-sm-2">
            End Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataFim)
        </dd>
        <dt class="col-sm-2">
            Participants
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalParticipantes)
        </dd>
        <dt class="col-sm-2">
            Total Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrecoTotal)
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
        <dt class="col-sm-2">
            Status Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataEstado)
        </dd>
        <dt class="col-sm-2">
            Reservation Type
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoReserva.NomeReserva)
        </dd>
        <dt class="col-sm-2">
            Client ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroCliente)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdReserva" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
