@model IEnumerable<ReserveSystem.Models.Reserva>

@{
    ViewData["Title"] = "Reservations";
}

<h2>Reservations</h2>

<p>
    <a asp-action="Create">Create New Reservation</a>
</p>

@if (Model == null || !Model.Any())
{
    <p>No reservations available.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().DataReserva)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().DataInicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().DataFim)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().TotalParticipantes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().PrecoTotal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Estado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().DataEstado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().TipoReserva.NomeReserva)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().NumeroCliente)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataReserva)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataInicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataFim)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalParticipantes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrecoTotal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataEstado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoReserva.NomeReserva)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumeroCliente)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdReserva">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.IdReserva">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdReserva">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
