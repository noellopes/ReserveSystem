@model ReserveSystem.Models.Reserva

@{
    ViewData["Title"] = "Create Reservation";
}

<h2>Create Reservation</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Client.NomeCliente" class="control-label"></label>
                <select asp-for="Client.NomeCliente" class="form-control" asp-items="ViewBag.ClientId"></select>
                <span asp-validation-for="Client.NomeCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoReserva.NomeReserva" class="control-label">Reservation Type</label>
                <select asp-for="TipoReserva.NomeReserva" class="form-control" asp-items="ViewBag.TipoReserva"></select>
                <span asp-validation-for="TipoReserva.NomeReserva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFim" class="control-label"></label>
                <input asp-for="DataFim" class="form-control" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalParticipantes" class="control-label"></label>
                <input asp-for="TotalParticipantes" class="form-control" />
                <span asp-validation-for="TotalParticipantes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" value="Pending" readonly />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
                        
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
