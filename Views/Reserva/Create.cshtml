@model ReserveSystem.Models.Reserva

@{
    ViewData["Title"] = "Create Reservation";
}

<h2>Create Reservation</h2>

<div class="row justify-content-center">
    <div class="mb-4">

        <form asp-action="Create" method="post" class="card p-4 shadow-sm">

            <!-- Cliente -->
            <div class="mb-3">
                <label asp-for="NumeroCliente" class="form-label">Client</label>
                <select asp-for="NumeroCliente" class="form-select" asp-items="ViewBag.ClientId"></select>
                <span asp-validation-for="NumeroCliente" class="text-danger"></span>
            </div>

            <!-- Tipo de Reserva -->
            <div class="mb-3">
                <label asp-for="IdTipoReserva" class="form-label">Reservation Type</label>
                <select asp-for="IdTipoReserva" class="form-select" asp-items="ViewBag.TipoReserva"></select>
                <span asp-validation-for="IdTipoReserva" class="text-danger"></span>
            </div>

            <!-- Tipo de Sala -->
            <div class="mb-3">
                <label asp-for="IdSala" class="form-label">Room Type</label>
                <select asp-for="IdSala" class="form-select" asp-items="ViewBag.TipoSala"></select>
                <span asp-validation-for="IdSala" class="text-danger"></span>
            </div>

            <!-- Tipo de Equipamento -->
            <div class="mb-3">
                <label asp-for="IdEquipamento" class="form-label">Equipment Type</label>
                <select asp-for="IdEquipamento" class="form-select" asp-items="ViewBag.TipoEquipamento"></select>
                <span asp-validation-for="IdEquipamento" class="text-danger"></span>
            </div>

            <!-- Data de Início -->
            <div class="mb-3">
                <label asp-for="DataInicio" class="form-label">Start Date</label>
                <input asp-for="DataInicio" class="form-control" type="datetime-local" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>

            <!-- Data de Fim -->
            <div class="mb-3">
                <label asp-for="DataFim" class="form-label">End Date</label>
                <input asp-for="DataFim" class="form-control" type="datetime-local" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>

            <!-- Total de Participantes -->
            <div class="mb-3">
                <label asp-for="TotalParticipantes" class="form-label">Total Participants</label>
                <input asp-for="TotalParticipantes" class="form-control" />
                <span asp-validation-for="TotalParticipantes" class="text-danger"></span>
            </div>

            <!-- Status (Read-Only) -->
            <div class="mb-3">
                <label asp-for="Estado" class="form-label">Status</label>
                <input asp-for="Estado" class="form-control" value="Pending" readonly />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="mb-3 text-end">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>


   