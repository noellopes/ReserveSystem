@model ReserveSystem.Models.Prato

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center mt-4">Create Prato</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Novo Prato</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Nome do Prato -->
                        <div class="form-group mb-3">
                            <label asp-for="Nome" class="form-label"></label>
                            <input asp-for="Nome" class="form-control" placeholder="Digite o nome do prato" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <!-- Descrição do Prato -->
                        <div class="form-group mb-3">
                            <label asp-for="Descricao" class="form-label"></label>
                            <textarea asp-for="Descricao" class="form-control" rows="4" placeholder="Descreva o prato"></textarea>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>

                        <!-- Botão de Enviar -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Criar Prato</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
