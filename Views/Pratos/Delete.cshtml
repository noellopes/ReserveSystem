@model ReserveSystem.Models.Prato

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center mt-4">Delete Prato</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Tem certeza que deseja deletar este prato?</h4>
                </div>
                <div class="card-body">
                    <!-- Detalhes do Prato -->
                    <dl class="row mb-4">
                        <dt class="col-sm-4">Nome:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

                        <dt class="col-sm-4">Descrição:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Descricao)</dd>
                    </dl>

                    <!-- Formulário de Exclusão -->
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="PratoId" />

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">Deletar</button>
                            <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
