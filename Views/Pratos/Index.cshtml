@model IEnumerable<ReserveSystem.Models.Prato>

@{
    ViewData["Title"] = "Lista de Pratos";
}

<style>
    .table th, .table td {
        text-align: center;
    }

    .table th {
        background-color: #007bff;
        color: white;
    }

    .btn-custom {
        background-color: #28a745;
        color: white;
    }

        .btn-custom:hover {
            background-color: #218838;
        }

    .btn-edit, .btn-details, .btn-delete {
        margin: 0 5px;
    }

    .actions {
        display: flex;
        justify-content: center;
        gap: 5px;
    }

    .description-column {
        max-width: 300px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
</style>

<div class="container mt-4">
    <h1 class="text-center text-primary">Lista de Pratos</h1>

    <div class="d-flex justify-content-between mb-3">
        <a class="btn btn-primary" asp-action="Create">Criar Novo Prato</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Nome)</th>
                <th>@Html.DisplayNameFor(model => model.First().Descricao)</th>
                <th>@Html.DisplayNameFor(model => model.First().Preco)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td class="description-column">@Html.DisplayFor(modelItem => item.Descricao)</td>
                    <td>@Html.DisplayFor(modelItem => item.Preco)</td>
                    <td>
                        <div class="actions">
                            <a class="btn btn-sm btn-info btn-edit" asp-action="Edit" asp-route-id="@item.PratoId">Editar</a>
                            <a class="btn btn-sm btn-primary btn-details" asp-action="Details" asp-route-id="@item.PratoId">Detalhes</a>
                            <a class="btn btn-sm btn-danger btn-delete" asp-action="Delete" asp-route-id="@item.PratoId">Excluir</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
