@model ReserveSystem.Models.Prato

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center mt-4">Editar Prato</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">Atualizar Informações do Prato</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="PratoId" />

                        <!-- Nome do Prato -->
                        <div class="form-group mb-3">
                            <label asp-for="Nome" class="form-label"></label>
                            <input asp-for="Nome" class="form-control" placeholder="Digite o nome do prato" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <!-- Descrição do Prato -->
                        <div class="form-group mb-3">
                            <label asp-for="Descricao" class="form-label"></label>
                            <textarea asp-for="Descricao" class="form-control" rows="4" placeholder="Descreva o prato"></textarea>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>

                        <!-- Botões de Ação -->
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success">Salvar</button>
                            <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
