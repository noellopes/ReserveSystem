@model IEnumerable<ReserveSystem.Models.PersonalTrainerModel>

@{
    ViewData["Title"] = "Personal Trainers";
}

<!-- Título da Página -->
<h1 class="text-center my-4">Lista de Personal Trainers</h1>

<!-- Botão para Criar Novo Personal Trainer -->
<div class="text-center mb-4">
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa fa-plus-circle"></i> Adicionar Novo Personal Trainer
    </a>
</div>

<!-- Tabela de Personal Trainers -->
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Email</th>
            <th scope="col">Telemóvel</th>
            <th scope="col">Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                <td class="text-center">
                    <!-- Botão Ver -->
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="Ver detalhes">
                        <i class="fa fa-eye"></i> Ver
                    </a>
                    <!-- Botão Editar -->
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Editar">
                        <i class="fa fa-edit"></i> Editar
                    </a>
                    <!-- Botão Deletar -->
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Deletar">
                        <i class="fa fa-trash-alt"></i> Deletar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Script de ícones Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.min.js"></script>

