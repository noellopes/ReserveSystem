@{
    ViewData["Title"] = "Home Page";
}

<div class="container my-5">
    <!-- Título Principal -->
    <div class="text-center mb-5">
        <h1 class="display-4 text-dark fw-bold" style="font-family: 'Poppins', sans-serif;">Bem-vindo ao nosso Ginásio</h1>
        <p class="text-muted fs-5" style="font-family: 'Poppins', sans-serif;">Explore nossos serviços e gerencie seu treino com facilidade</p>
    </div>

    <!-- Navegação Principal -->
    <div class="row g-4 justify-content-center">
        <!-- Link para Personal Trainers -->
        <div class="col-md-3">
            <div class="card shadow-lg border-0 text-center">
                <div class="card-body py-4">
                    <i class="bi bi-person-fill display-3 text-primary mb-3"></i>
                    <h5 class="card-title text-dark fw-bold">Personal Trainers</h5>
                    <p class="card-text text-muted">Gerencie os personal trainers</p>
                    <a asp-controller="PersonalTrainer" asp-action="Index" class="btn btn-dark btn-lg rounded-pill">Acessar</a>
                </div>
            </div>
        </div>

        <!-- Link para Clientes -->
        <div class="col-md-3">
            <div class="card shadow-lg border-0 text-center">
                <div class="card-body py-4">
                    <i class="bi bi-people-fill display-3 text-success mb-3"></i>
                    <h5 class="card-title text-dark fw-bold">Clientes</h5>
                    <p class="card-text text-muted">Visualize e gerencie os clientes.</p>
                    <a asp-controller="Client" asp-action="Index" class="btn btn-dark btn-lg rounded-pill">Acessar</a>
                </div>
            </div>
        </div>

        <!-- Link para Reservas -->
        <div class="col-md-3">
            <div class="card shadow-lg border-0 text-center">
                <div class="card-body py-4">
                    <i class="bi bi-calendar-event-fill display-3 text-warning mb-3"></i>
                    <h5 class="card-title text-dark fw-bold">Reservas</h5>
                    <p class="card-text text-muted">Organize e acompanhe as reservas.</p>
                    <a asp-controller="Reserva" asp-action="Index" class="btn btn-dark btn-lg rounded-pill">Acessar</a>
                </div>
            </div>
        </div>

        <!-- Link para Espaços -->
        <div class="col-md-3">
            <div class="card shadow-lg border-0 text-center">
                <div class="card-body py-4">
                    <i class="bi bi-building display-3 text-danger mb-3"></i>
                    <h5 class="card-title text-dark fw-bold">Espaços</h5>
                    <p class="card-text text-muted">Gerencie os espaços do ginásio.</p>
                    <a asp-controller="Space" asp-action="Index" class="btn btn-dark btn-lg rounded-pill">Acessar</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Script para ícones Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.min.js"></script>
