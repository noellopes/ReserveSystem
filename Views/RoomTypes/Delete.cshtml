@model ReserveSystem.Models.RoomType

@{
    ViewData["Title"] = "Delete Room Type";
}

<div class="container mt-5">
    <h1 class="text-danger text-center"><i class="bi bi-trash-fill"></i> Delete Room Type</h1>
    <p class="text-center text-muted">Are you sure you want to delete this room type? This action cannot be undone.</p>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 shadow-lg mt-4">
                <div class="card">
                    <div class="card-header bg-danger text-white">
                        <h5 class="text-center"><i class="bi bi-building"></i> Room Type Details</h5>
                    </div>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">
                            <i class="bi bi-eye"></i> @Html.DisplayNameFor(model => model.HasView)
                        </dt>
                        <dd class="col-sm-9">
                            @if (Model.HasView)
                            {
                                <i class="fa fa-check text-success"></i> <!-- Visto verde -->
                            }
                            else
                            {
                                <i class="fa fa-times text-danger"></i> <!-- Cruz vermelha -->
                            }
                        </dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-type"></i> @Html.DisplayNameFor(model => model.Type)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Type)
                        </dd>

                         <dt class="col-sm-3">
                            <i class="bi bi-type"></i> @Html.DisplayNameFor(model => model.Beds)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Beds)
                        </dd>


                        <dt class="col-sm-3">
                            <i class="bi bi-person"></i> @Html.DisplayNameFor(model => model.RoomCapacity)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.RoomCapacity)
                        </dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-handicap"></i> @Html.DisplayNameFor(model => model.AcessibilityRoom)
                        </dt>
                        <dd class="col-sm-9">
                            @if (Model.AcessibilityRoom)
                            {
                                <i class="fa fa-check text-success"></i> <!-- Visto verde -->
                            }
                            else
                            {
                                <i class="fa fa-times text-danger"></i> <!-- Cruz vermelha -->
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center mt-4">
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
        <form asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" asp-for="RoomTypeId" />
            <button type="submit" class="btn btn-danger m-2">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
        </form>
    </div>
</div>
