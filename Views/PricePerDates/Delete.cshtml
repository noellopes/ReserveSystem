@model ReserveSystem.Models.PricePerDate

@{
    ViewData["Title"] = "Delete";
}

<style>
    /* General Body Styling */
    body {
        font-family: 'Georgia', serif;
        background-color: #f9f9f6;
        color: #1a1a1a;
    }

    /* Container for the Delete Confirmation */
    .details-container {
        background: #ffffff;
        padding: 3rem;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        max-width: 700px;
        margin: 5rem auto;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    /* Row Styling */
    .row {
        display: flex;
        justify-content: space-between;
        padding: 0.5rem 0;
        width: 100%;
        max-width: 500px;
    }

    /* Label and Value Divs Styling */
    .label {
        font-weight: 600;
        color: #333333;
        font-size: 1.1rem;
        text-align: left;
        flex: 1;
    }

    .value {
        font-size: 1.05rem;
        color: #4a4a4a;
        text-align: right;
        flex: 2;
    }

    /* Horizontal Line Styling */
    .hr {
        border: none;
        height: 2px;
        background-color: #d4af37;
        width: 60%;
        margin: 1rem auto;
        opacity: 0.8;
    }

    /* Button Styling */
    .btn_delete, .btn_back {
        font-weight: 600;
        padding: 14px 28px;
        border-radius: 50px;
        font-size: 1.125rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        width: 50%;
    }

    .btn_delete {
        background-color: #ffffff;
        border-color: #d4af37;
        color: #333333;
    }

        .btn_delete:hover {
            background-color: #333333;
            color: #F5F5F5;
            border-color: #d4af37;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            transform: translateY(-3px);
        }

        .btn_delete:active {
            background-color: #000000;
            border-color: #000000;
            color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transform: translateY(0);
        }

    .btn_back {
        background-color: #333333;
        border-color: #d4af37;
        color: #ffffff;
    }

        .btn_back:hover {
            background-color: #ffffff;
            color: #d4af37;
            border-color: #d4af37;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            transform: translateY(-3px);
        }

    /* Button container for aligning Delete and Back buttons */
    .button-container {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-top: 2rem;
        width: 70%;
    }

    /* Styling for Back button to appear below Delete button */
    .btn_back {
        display: block;
        margin: 2rem auto 0;
        width: 70%;
        text-align: center;
    }

    h1 {
        font-size: 2rem;
        color: #d4af37;
    }

    /* Modal Styling */
    .modal-content {
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    .modal-header {
        background-color: #333333;
        color: white;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
    }

    .modal-body {
        font-size: 1.1rem;
        color: #333333;
        padding: 1.5rem;
    }

    .modal-footer {
        background-color: #f9f9f6;
        padding: 1rem;
        justify-content: center;
    }

    .btn_deleteC {
        background-color: white;
        border-color: #d4af37;
        color: #d4af37;
        font-weight: 600;
        width: 100%;
        padding: 14px;
        border-radius: 50px;
        font-size: 1.125rem;
        transition: all 0.3s ease;
    }

        .btn_deleteC:hover {
            background-color: #333333;
            border-color: #d4af37;
            color: #ffffff;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            transform: translateY(-3px);
        }

        .btn_deleteC:active {
            background-color: #000000;
            border-color: #000000;
            color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transform: translateY(0);
        }

    .btn_cancel {
        background-color: #333333;
        color: white;
        border: 1px solid #d4af37;
        width: 100%;
        font-weight: 600;
        border-radius: 50px;
        padding: 14px;
    }

        .btn_cancel:hover {
            background-color: white;
            color: #d4af37;
        }
</style>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>PricePerDate</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.dateBegin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.dateBegin)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.dateEnd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.dateEnd)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.newPricePerDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.newPricePerDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.actState)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.actState)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TQePreco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TQePreco.type)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="pricePD_id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
