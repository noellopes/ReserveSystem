@model ReserveSystem.Models.PricePerDate

@{
    ViewData["Title"] = "Details";
}

<style>
    /* General Body Styling */
    body {
        font-family: 'Georgia', serif;
        background-color: #f9f9f6;
        color: #1a1a1a;
    }

    /* Container and General Styles */
    .details-container {
        background: #ffffff;
        padding: 3rem;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        max-width: 700px;
        margin: 5rem auto;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .row {
        display: flex;
        justify-content: space-between;
        padding: 0.5rem 0;
        width: 100%;
        max-width: 500px;
    }

    /* Styling for Label and Value Divs */
    .label {
        font-weight: 600;
        color: #333333;
        font-size: 1.1rem;
        text-align: left;
        flex: 1;
    }

    .value {
        font-size: 1.05rem;
        color: #4a4a4a;
        text-align: right;
        flex: 2;
    }

    /* Additional styles */
    .hr {
        border: none;
        height: 2px;
        background-color: #d4af37;
        width: 60%;
        margin: 1rem auto;
        opacity: 0.8;
    }

    /* Button Styles */
    .btn_edit, .btn_delete, .btn_back {
        font-weight: 600;
        padding: 14px 28px;
        border-radius: 50px;
        font-size: 1.125rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        width: 50%;
    }

    .btn_edit {
        background-color: #ffffff;
        border-color: #d4af37;
        color: #333333;
    }

        .btn_edit:hover {
            background-color: #333333;
            color: #F5F5F5;
            border-color: #d4af37;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            transform: translateY(-3px);
        }

        .btn_edit:active {
            background-color: #000000;
            border-color: #000000;
            color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transform: translateY(0);
        }

    .btn_delete {
        background-color: #ffffff;
        border-color: #d4af37;
        color: #333333;
    }

        .btn_delete:hover {
            background-color: #333333;
            color: #F5F5F5;
            border-color: #d4af37;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            transform: translateY(-3px);
        }

        .btn_delete:active {
            background-color: #000000;
            border-color: #000000;
            color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transform: translateY(0);
        }

    .btn_back {
        background-color: #333333;
        border-color: #d4af37;
        color: #ffffff;
    }

        .btn_back:hover {
            background-color: #ffffff;
            color: #d4af37;
            border-color: #d4af37;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            transform: translateY(-3px);
        }

    /* Button container for aligning Edit and Delete buttons in one row */
    .button-container {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-top: 2rem;
        width: 70%;
    }

    /* Styling for Back button to appear below Edit and Delete buttons */
    .btn_back {
        display: block;
        margin: 2rem auto 0;
        width: 70%;
        text-align: center;
    }

    /* Responsive layout for mobile */
    .details-container {
        padding: 2rem;
    }

    h1 {
        font-size: 2rem;
        color: #d4af37;
    }

    .btn-primary, .btn-warning {
        padding: 10px 20px;
        font-size: 1rem;
    }
</style>

<h1>Details</h1>

<div>
    <h4>PricePerDate</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.dateBegin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.dateBegin)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.dateEnd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.dateEnd)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.newPricePerDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.newPricePerDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.actState)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.actState)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TQePreco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TQePreco.type)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.pricePD_id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
