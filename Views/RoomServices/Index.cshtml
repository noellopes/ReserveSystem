@model IEnumerable<ReserveSystem.Models.RoomService>

@{
    ViewData["Title"] = "List of Room Services";
}

<h1 class="mb-4 text-center">@ViewData["Title"]</h1>

<div class="mb-3 text-center">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create New Room Service
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-secondary">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Job_ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Room_Service_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Room_Service_Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Room_Service_Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Room_Service_Active)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Room_Service_Limit_Hour)
                </th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Job_ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Room_Service_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Room_Service_Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Room_Service_Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Room_Service_Active)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Room_Service_Limit_Hour)
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.ID_RoomService" class="btn btn-outline-warning btn-sm">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.ID_RoomService" class="btn btn-outline-info btn-sm">
                            <i class="bi bi-eye"></i> Details
                        </a>
                            <a asp-action="Delete" asp-route-id="@item.ID_RoomService" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
