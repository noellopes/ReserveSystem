@model ReserveSystem.Models.RoomService

@{
    ViewData["Title"] = "Details";
}

<div class="d-flex justify-content-center mt-5">
    <div class="card" style="width: 30rem;">
        <div class="card-body">
            <h5 class="card-title">Room Service Details</h5>
            <h6 class="card-subtitle mb-3 text-muted">ID: @Model?.ID_RoomService</h6>

            <p><strong>Job ID:</strong> @Model?.Job_ID</p>
            <p><strong>Name:</strong> @Model?.Room_Service_Name</p>
            <p><strong>Description:</strong> @Model?.Room_Service_Description</p>
            <p><strong>Price:</strong> €@Model?.Room_Service_Price</p>
            <p><strong>Active:</strong> @(Model.Room_Service_Active ? "Yes" : "No")</p>
            <p><strong>Limit Hour:</strong> @Model?.Room_Service_Limit_Hour</p>

            <div class="d-flex justify-content-around mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.ID_RoomService" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
