@model IEnumerable<ReserveSystem.Models.TipoQuarto>

@{
    ViewData["Title"] = "Room Type Index";
}

<style>
    /* General Body Styling */
    body {
        font-family: 'Georgia', serif;
        background-color: #f9f9f6; /* Off-white background */
        color: #1a1a1a; /* Deep black for text */
    }

    /* Container and General Styles */
    .details-container {
        background: #ffffff; /* White background for container */
        padding: 3rem;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        max-width: 1200px;
        margin: 5rem auto;
    }

    .row {
        display: flex;
        justify-content: space-between;
        padding: 0.5rem 0;
        width: 100%;
    }

    /* Styling for Label and Value Divs */
    .label {
        font-weight: 600;
        color: #333333; /* Darker black */
        font-size: 1.1rem;
        text-align: left;
        flex: 1;
    }

    .value {
        font-size: 1.05rem;
        color: #4a4a4a; /* Dark grey for values */
        text-align: right;
        flex: 2;
    }

    /* Additional styles */
    .hr {
        border: none;
        height: 2px;
        background-color: #d4af37; /* Gold */
        width: 60%;
        margin: 1rem auto;
        opacity: 0.8;
    }

    /* Button Styles */
    .btn_edit, .btn_delete, .btn_back, .btn_back2 {
        font-weight: 600;
        padding: 10px 20px;
        border-radius: 50px;
        font-size: 0.9rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        margin: 5px;
        text-align: center; /* Center text */
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .btn_edit, .btn_delete, .btn_back {
        width: 80px; /* Adjusting width to ensure similar proportions */
    }

    .btn_edit {
        background-color: #ffffff;
        border-color: #d4af37;
        color: #333333;
        margin-top: 2rem;
    }

        .btn_edit:hover {
            background-color: #333333;
            color: #F5F5F5;
            border-color: #d4af37;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            transform: translateY(-3px);
        }

        .btn_edit:active {
            background-color: #000000;
            border-color: #000000;
            color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transform: translateY(0);
        }

    .btn_delete {
        background-color: #ffffff;
        border-color: #d4af37;
        color: #333333;
        margin-top: 2rem;
    }

        .btn_delete:hover {
            background-color: #333333;
            color: #F5F5F5;
            border-color: #d4af37;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            transform: translateY(-3px);
        }

        .btn_delete:active {
            background-color: #000000;
            border-color: #000000;
            color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transform: translateY(0);
        }

    .btn_back {
        background-color: #333333;
        border-color: #d4af37;
        color: #ffffff;
        margin-top: 2rem;
    }

        .btn_back:hover {
            background-color: #ffffff;
            color: #d4af37;
            border-color: #d4af37;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            transform: translateY(-3px);
        }

    .btn_back2 {
        background-color: #333333;
        border-color: #d4af37;
        color: #ffffff;
        margin-top: 2rem;
        margin-right: 2rem;
    }

        .btn_back2:hover {
            background-color: #ffffff;
            color: #d4af37;
            border-color: #d4af37;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            transform: translateY(-3px);
        }

    /* Button container for aligning Edit and Delete buttons in one row */
    .button-container {
        display: flex;
        flex-direction: row;
        gap: 0.5rem; /* Space between buttons */
        justify-content: flex-start;
    }

    h1 {
        font-size: 2rem;
        color: #d4af37; /* Gold for title */
    }

    .btn-primary, .btn-warning {
        padding: 10px 20px;
        font-size: 1rem;
    }
</style>

<div class="details-container">
    <h1 class="text-center">Room Type Index</h1>
    <hr class="hr" />
    <table class="table">
        <thead>
            <tr>
                <th>Room Type</th>
                <th>Room Capacity</th>
                <th>Room Quantity</th>
                <th>Room with Accessibility</th>
                <th>Room with View</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.capacity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomQuantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AcessibilityRoom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.View)
                    </td>
                    <td class="button-container">
                        <a asp-action="Edit" asp-route-id="@item.TipoQuartoId" class="btn btn_edit">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.TipoQuartoId" class="btn btn_delete">Delete</a>
                        <a asp-action="Details" asp-route-id="@item.TipoQuartoId" class="btn btn_back">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>
        <a asp-action="Create" class="btn btn_back2">Create New</a>
    </p>
</div>

