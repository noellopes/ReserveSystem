@model IEnumerable<ReserveSystem.Models.RoomBooking>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PersonsNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CleaningOption)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.booking)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.room)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PersonsNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CleaningOption)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.booking.BookingId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.room.RoomId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RoomBookingId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RoomBookingId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RoomBookingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
