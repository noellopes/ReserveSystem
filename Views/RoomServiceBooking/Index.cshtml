@model ReserveSystem.Models.RoomServiceViewModel

@{
    ViewData["Title"] = "Room Service Bookings";
}

<div class="container-fluid px-4">
    <!-- Header Section -->
    <div class="row align-items-center my-5">
        <div class="col-md-6">
            <h1 class="display-4 fw-bold">Room Service Bookings</h1>
            <p class="lead text-muted">Manage your bookings with ease and efficiency.</p>
        </div>
        <div class="col-md-6 text-md-end">
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle me-2"></i>Create New Booking
            </a>
        </div>
    </div>

    <!-- Search and Filter Section -->
    <div class="row mb-5">
        <div class="col-12">
            <form asp-controller="RoomServiceBooking" asp-action="Index" method="get">
                <div class="input-group">
                    <select asp-for="RoomServiceId" asp-items="Model.RoomServices" class="form-select">
                        <option value="">Services</option>
                    </select>
                    <select asp-for="RoomId" asp-items="Model.Rooms" class="form-select">
                        <option value="">Rooms</option>
                    </select>
                    <button type="submit" class="btn btn-secondary">
                        <i class="bi bi-funnel-fill me-2"></i>Filter
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary" title="Clear Filters">
                        <i class="bi bi-x-circle"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Bookings List -->
    <div class="row g-4">
        @foreach (var item in Model.RoomServiceBookings ?? Enumerable.Empty<ReserveSystem.Models.RoomServiceBooking>())
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <!-- Card Header -->
                        <div class="mb-3 d-flex justify-content-between align-items-center">
                            <h5 class="card-title fw-bold mb-0">
                                <i class="bi bi-bookmark-fill text-primary me-2"></i>
                                Booking #@item.Id
                            </h5>
                            <input type="checkbox" class="form-check-input bulk-delete-checkbox" value="@item.Id" />
                        </div>
                        <p class="text-muted mb-0">Room: @item.Room?.Number</p>
                        <p class="text-muted">Service Details: @item.RoomService?.Name</p>
                        <!-- Card Content -->
                        <div class="mb-3">
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-calendar-event text-success me-2"></i>
                                <span>Booked: @item.DateTime.ToString("dd/MM/yyyy HH:mm")</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="bi bi-calendar-range text-warning me-2"></i>
                                <span>Period: @item.StartDate.ToString("dd/MM/yyyy HH:mm") - @item.EndDate.ToString("dd/MM/yyyy HH:mm")</span>
                            </div>
                        </div>
                        <!-- Status Badges -->
                        <div class="mb-3">
                            <span class="badge bg-light text-dark me-2">
                                <i class="bi bi-person-fill me-1"></i>Staff: @(item.Staff?.Name ?? "No Staff Assigned")
                            </span>
                            <span class="badge bg-light text-dark">
                                <i class="bi bi-person-fill me-1"></i>Client: @item.Client?.Name
                            </span>
                        </div>
                        <!-- Card Footer -->
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-link text-decoration-none">
                                        <i class="bi bi-eye-fill me-1"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-link text-decoration-none">
                                        <i class="bi bi-pencil-fill me-1"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-link text-decoration-none text-danger">
                                        <i class="bi bi-trash-fill me-1"></i>
                                    </a>
                                </div>
                                <div>
                                    <span class="fs-5 fw-bold text-success">
                                        @item.ValueToPay.ToString("C", new System.Globalization.CultureInfo("pt-PT"))
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (Model.PagingInfo != null && Model.PagingInfo.TotalPages > 1)
    {
        <div class="d-flex justify-content-center mt-5">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    @if (Model.PagingInfo.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" 
                            asp-route-page="1"
                            asp-route-roomServiceId="@Model.RoomServiceId"
                            asp-route-roomId="@Model.RoomId"
                            aria-label="First">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    }

                    @for (int i = Model.PagingInfo.StartPage; i <= Model.PagingInfo.EndPage; i++)
                    {
                        <li class="page-item @(i == Model.PagingInfo.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index"
                            asp-route-page="@i"
                            asp-route-roomServiceId="@Model.RoomServiceId"
                            asp-route-roomId="@Model.RoomId">@i</a>
                        </li>
                    }

                    @if (Model.PagingInfo.CurrentPage < Model.PagingInfo.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index"
                            asp-route-page="@Model.PagingInfo.TotalPages"
                            asp-route-roomServiceId="@Model.RoomServiceId"
                            asp-route-roomId="@Model.RoomId"
                            aria-label="Last">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    }
</div>