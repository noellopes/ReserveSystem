@model ReserveSystem.Models.RoomServiceBooking

@{
    ViewData["Title"] = "Delete Room Service Booking";
}

<!-- Page Header -->
<div class="container my-4">
    <div class="row justify-content-center">
        <h1 class="text-center text-danger">Delete Room Service Booking</h1>
    </div>
    <hr class="border-danger">
</div>

<!-- Delete Form -->
<div class="card border-danger shadow-lg mx-auto" style="width: 75%;">
    <div class="card-header bg-dark text-light text-center">
        <h4>Delete Booking NÂº @Model?.Id</h4>
    </div>
    <div class="card-body bg-dark text-light">
        <div class="row">
            <!-- Service Details -->
            <div class="col-md-6 mb-4">
                <label class="form-label">Room Service:</label>
                <div class="input-group">
                    <span class="input-group-text bg-dark text-light"><i class="bi bi-gear-fill"></i></span>
                    <input type="text" class="form-control bg-dark text-light" value="@Model?.RoomService?.Name" readonly />
                </div>
            </div>

            <!-- Staff Details -->
            <div class="col-md-6 mb-4">
                <label class="form-label">Staff Member:</label>
                <div class="input-group">
                    <span class="input-group-text bg-dark text-light"><i class="bi bi-person-badge-fill"></i></span>
                    <input type="text" class="form-control bg-dark text-light" value="@Model?.Staff?.Name" readonly />
                </div>
            </div>

            <!-- Client Details -->
            <div class="col-md-6 mb-4">
                <label class="form-label">Client:</label>
                <div class="input-group">
                    <span class="input-group-text bg-dark text-light"><i class="bi bi-person-fill"></i></span>
                    <input type="text" class="form-control bg-dark text-light" value="@Model?.Client?.Name" readonly />
                </div>
            </div>

            <!-- Room Details -->
            <div class="col-md-6 mb-4">
                <label class="form-label">Room:</label>
                <div class="input-group">
                    <span class="input-group-text bg-dark text-light"><i class="bi bi-door-closed-fill"></i></span>
                    <input type="text" class="form-control bg-dark text-light" value="@Model?.Room?.Number" readonly />
                </div>
            </div>

            <!-- Dates -->
            <div class="col-md-6 mb-4">
                <label class="form-label">Reservation Date:</label>
                <div class="input-group">
                    <span class="input-group-text bg-dark text-light"><i class="bi bi-calendar-event-fill"></i></span>
                    <input type="text" class="form-control bg-dark text-light" value="@Model?.DateTime.ToString("dd/MM/yyyy HH:mm")" readonly />
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <label class="form-label">Service Period:</label>
                <div class="input-group">
                    <span class="input-group-text bg-dark text-light"><i class="bi bi-calendar-range"></i></span>
                    <input type="text" class="form-control bg-dark text-light" 
                           value="@Model?.StartDate.ToString("dd/MM/yyyy HH:mm") - @Model?.EndDate.ToString("dd/MM/yyyy HH:mm")" readonly />
                </div>
            </div>

            <!-- Price & Feedback -->
            <div class="col-md-6 mb-4">
                <label class="form-label">Price:</label>
                <div class="input-group">
                    <span class="input-group-text bg-dark text-light"><i class="bi bi-currency-euro"></i></span>
                    <input type="text" class="form-control bg-dark text-light" 
                           value="@Model?.ValueToPay.ToString("C", new System.Globalization.CultureInfo("pt-PT"))" readonly />
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <label class="form-label">Client Feedback:</label>
                <div class="input-group">
                    <span class="input-group-text bg-dark text-light"><i class="bi bi-star-fill"></i></span>
                    <div class="form-control bg-dark text-light d-flex align-items-center">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <i class="bi bi-star-fill @(i <= Model?.ClientFeedback ? "text-warning" : "text-secondary") me-1"></i>
                        }
                    </div>
                </div>
            </div>

            <!-- Status Badges -->
            <div class="col-12 mt-4">
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="d-flex align-items-center">
                            <span class="badge @(Model?.BookedState == true ? "bg-success" : "bg-secondary") p-2 flex-grow-1">
                                <i class="bi bi-calendar-check me-2"></i>@(Model?.BookedState == true ? "Booked" : "Not Booked")
                            </span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex align-items-center">
                            <span class="badge @(Model?.StaffConfirmation == true ? "bg-info" : "bg-warning") p-2 flex-grow-1">
                                <i class="bi bi-person-check me-2"></i>@(Model?.StaffConfirmation == true ? "Staff Confirmed" : "Pending Confirmation")
                            </span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex align-items-center">
                            <span class="badge @(Model?.PaymentDone == true ? "bg-success" : "bg-danger") p-2 flex-grow-1">
                                <i class="bi bi-credit-card me-2"></i>@(Model?.PaymentDone == true ? "Paid" : "Payment Pending")
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="card-footer bg-dark text-center">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-outline-danger mx-2">
                <i class="bi bi-trash-fill me-2"></i>Delete
            </button>
        </form>
        <a asp-action="Index" class="btn btn-outline-light mx-2">
            <i class="bi bi-x-circle-fill me-2"></i>Cancel
        </a>
    </div>
</div>