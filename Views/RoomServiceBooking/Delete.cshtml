@model ReserveSystem.Models.RoomServiceBooking

@{
    ViewData["Title"] = "Delete Room Service Booking";
}

<!-- Page Header -->
<div class="container my-4">
    <div class="row justify-content-center">
        <h1 class="text-center text-danger">Delete Room Service Booking</h1>
    </div>
    <hr class="border-danger">
</div>

<!-- Details Section -->
<div class="card border-danger shadow-lg mx-auto" style="width: 75%;">
    <div class="card-header bg-dark text-light text-center">
        <h4>Confirm Deletion of Booking NÂº @Model?.Id</h4>
    </div>
    <div class="card-body bg-dark text-light">
        <dl class="row">
            <dt class="col-sm-4">Room Service ID:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.RoomServiceId)</dd>

            <dt class="col-sm-4">Staff ID:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.StaffId)</dd>

            <dt class="col-sm-4">Client ID:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.ClientId)</dd>

            <dt class="col-sm-4">Room ID:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.RoomId)</dd>

            <dt class="col-sm-4">Booking Date & Time:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.DateTime)</dd>

            <dt class="col-sm-4">Start Date:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.StartDate)</dd>

            <dt class="col-sm-4">End Date:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.EndDate)</dd>

            <dt class="col-sm-4">Booking Status:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.BookedState)</dd>

            <dt class="col-sm-4">Staff Confirmation:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.StaffConfirmation)</dd>

            <dt class="col-sm-4">Client Feedback:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.ClientFeedback)</dd>

            <dt class="col-sm-4">Price:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.ValueToPay)</dd>

            <dt class="col-sm-4">Payment Status:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.PaymentDone)</dd>
        </dl>
    </div>
    <div class="card-footer bg-dark text-center">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-outline-danger mx-2">
        </form>
        <a asp-action="Index" class="btn btn-outline-light mx-2">Cancel</a>
    </div>
</div>
