                        <input asp-for="StaffId" class="form-control bg-dark text-light" style="border: 1px solid white;" />
                    </div>
                    <span asp-validation-for="StaffId" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-4">
                    <label asp-for="ClientId" class="form-label">Client ID:</label>
                    <div class="input-group">
                        <span class="input-group-text bg-dark text-light">üë§</span>
                        <input asp-for="ClientId" class="form-control bg-dark text-light" style="border: 1px solid white;" />
                    </div>
                    <span asp-validation-for="ClientId" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-4">
                    <label asp-for="RoomId" class="form-label">Room ID:</label>
                    <div class="input-group">
