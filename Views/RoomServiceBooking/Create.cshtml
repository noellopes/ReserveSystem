                        <input asp-for="RoomId" class="form-control bg-dark text-light" style="border: 1px solid white;" />
                    </div>
                    <span asp-validation-for="RoomId" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-4">
                    <label asp-for="DateTime" class="form-label">Booking Date & Time:</label>
                    <div class="input-group">
                        <span class="input-group-text bg-dark text-light">üìÖ üïí</span>
                        <input asp-for="DateTime" class="form-control bg-dark text-light" style="border: 1px solid white;" />
                    </div>
                    <span asp-validation-for="DateTime" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-4">
                    <label asp-for="StartDate" class="form-label">Start Date:</label>
                    <div class="input-group">
                        <span class="input-group-text bg-dark text-light">üìÖ</span>
                        <input asp-for="StartDate" class="form-control bg-dark text-light" style="border: 1px solid white;" />
                    </div>
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-4">
                    <label asp-for="EndDate" class="form-label">End Date:</label>
                    <div class="input-group">
                        <span class="input-group-text bg-dark text-light">üìÖ</span>
                        <input asp-for="EndDate" class="form-control bg-dark text-light" style="border: 1px solid white;" />
                    </div>
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-4">
