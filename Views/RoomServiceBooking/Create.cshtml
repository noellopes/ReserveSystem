                    </div>
                    <span asp-validation-for="ValueToPay" class="text-danger"></span>
                </div>
            </div>

            <!-- Checkboxes -->
            <div class="form-group d-flex justify-content-between my-4">
                <div class="form-check">
                    <input class="form-check-input" asp-for="BookedState" />
                    <label class="form-check-label text-light" asp-for="BookedState">Booking State</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" asp-for="StaffConfirmation" />
