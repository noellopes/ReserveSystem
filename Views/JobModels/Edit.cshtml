@model ReserveSystem.Models.JobModel

@{
    ViewData["Title"] = "Edit Job";
}

<div class="container my-5">
    <h1 class="mb-4">Edit Job</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Hidden Field for Job ID -->
                <input type="hidden" asp-for="jobID" />

                <!-- Job Description Field -->
                <div class="mb-3">
                    <label asp-for="jobDescription" class="form-label fw-bold">Job Description</label>
                    <input asp-for="jobDescription" class="form-control" placeholder="Enter job description" />
                    <span asp-validation-for="jobDescription" class="text-danger"></span>
                </div>

                <!-- Save Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Save</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Back to List Button -->
    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
