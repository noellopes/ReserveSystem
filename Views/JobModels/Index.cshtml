@model IEnumerable<ReserveSystem.Models.JobModel>

@{
    ViewData["Title"] = "Job List";
}

<div class="container my-5">
    <h1 class="mb-4">Job List</h1>

    <!-- Create New Button -->
    <p>
        <a asp-action="Create" class="btn btn-success mb-3">Create New Job</a>
    </p>

    <!-- Jobs Table -->
    <table class="table table-striped table-bordered align-middle shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Job Description</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.jobDescription)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.jobID" class="btn btn-primary btn-sm me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.jobID" class="btn btn-info btn-sm me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.jobID" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
