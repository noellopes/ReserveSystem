@model ReserveSystem.Models.JobModel

@{
    ViewData["Title"] = "Delete Job";
}

<div class="container my-5">
    <h1 class="mb-4 text-danger">Delete Job</h1>
    <h3>Are you sure you want to delete this job?</h3>

    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <h4 class="card-title">Job Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4 fw-bold">
                    @Html.DisplayNameFor(model => model.jobDescription)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.jobDescription)
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="jobID" />

            <!-- Delete and Cancel Buttons -->
            <button type="submit" class="btn btn-danger me-2">Confirm Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
