@{
    ViewBag.Title = $"{ViewBag.Entity} created";
}

<style>
    body {
        font-family: 'Georgia', serif;
        background-color: #f9f9f6; /* Off-white background */
        color: #1a1a1a; /* Deep black for text */
    }

    .details-container {
        background: #ffffff; /* White background for container */
        padding: 3rem;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        max-width: 700px;
        margin: 5rem auto;
        text-align: center;
    }

    h1 {
        font-size: 2rem;
        color: #d4af37; /* Gold for title */
    }

    .alert {
        margin-top: 2rem;
        padding: 2rem;
        border-radius: 12px;
        border: 1px solid #d4af37;
        background-color: #fefefe;
    }

    .alert-heading {
        font-size: 1.5rem;
        color: #333333;
    }

    p {
        font-size: 1.125rem;
        color: #4a4a4a;
    }

    .hr {
        border: none;
        height: 2px;
        background-color: #d4af37;
        width: 60%;
        margin: 1.5rem auto;
    }

    .btn_back {
        display: inline-block;
        margin-top: 2rem;
        background-color: #333333;
        border-color: #d4af37;
        color: #ffffff;
        font-weight: 600;
        padding: 14px 28px;
        border-radius: 50px;
        font-size: 1.125rem;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .btn_back:hover {
            background-color: #ffffff;
            color: #d4af37;
            border-color: #d4af37;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            transform: translateY(-3px);
        }
</style>

<div class="details-container">
    <h1>@ViewBag.Title</h1>
    <hr class="hr" />

    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">Success!</h4>
        <p>The @ViewBag.Entity was successfully created.</p>
        <a asp-action="@ViewBag.Action" asp-controller="@ViewBag.Controller" class="btn_back">Back to List</a>
    </div>

    
</div>


