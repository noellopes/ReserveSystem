@{
    ViewBag.Title = $"{ViewBag.Entity} no longer exists";
}

<style>
    body {
        font-family: 'Georgia', serif;
        background-color: #f9f9f6;
        color: #1a1a1a; 
    }

    .details-container {
        background: #ffffff;
        padding: 3rem;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        max-width: 700px;
        margin: 5rem auto;
        text-align: center;
    }

    h1 {
        color: #d4af37; /* Gold for heading */
        text-align: center;
        font-size: 2rem;
        color: #d4af37; 
        font-weight: 700;
    }

    .alert {
        margin-top: 2rem;
        padding: 2rem;
        border-radius: 12px;
        border: 1px solid #d4af37;
        background-color: #fefefe;
    }

    .alert-heading {
        font-size: 1.5rem;
        color: #333333;
    }

    p {
        font-size: 1.125rem;
        color: #4a4a4a;
    }

    .hr {
    hr {
        border: none;
        height: 2px;
        background-color: #d4af37;
        background-color: #d4af37; /* Gold */
        width: 60%;
        margin: 1.5rem auto;
        margin: 1rem auto;
        opacity: 0.8;
    }

    .btn_back {
        display: inline-block;
        margin-top: 2rem;
        background-color: #333333;
    .btn {
        background-color: #ffffff;
        border-color: #d4af37;
        color: #ffffff;
        color: #333333;
        font-weight: 600;
        padding: 14px 28px;
        border-radius: 50px;
        font-size: 1.125rem;
        text-decoration: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        width: 45%;
        margin-top: 7rem;
    }

        .btn_back:hover {
            background-color: #ffffff;
            color: #d4af37;
            border-color: #d4af37;
        .btn:hover {
            background-color: #333333;
            color: #F5F5F5;
            border-color: ##b29126;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            transform: translateY(-3px);
        }

        .btn:active {
            background-color: #000000; /* Darker effect when clicked */
            border-color: #000000;
            color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Return to original shadow */
            transform: translateY(0); /* Button "presses" down */
        }

</style>

<div class="details-container">
    <h1>@ViewBag.Title</h1>
    <hr class="hr" />
<hr>

    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">Sorry!</h4>
<div class="container mt-5">
    <div class="alert alert-warning text-center" role="alert" style="border-color:crimson">
        <h4 class="alert-heading">Warning!</h4>
        <p>The @ViewBag.Entity you are looking for no longer exists. It might have been deleted.</p>
        <hr>
        <a asp-action="@ViewBag.Action" asp-controller="@ViewBag.Controller" class="btn btn-primary">Back to list</a>
    </div>
    <a asp-action="@ViewBag.Action" asp-controller="@ViewBag.Controller" class="btn">Back to list</a>
</div>


