@{
    ViewBag.Title = $"{ViewBag.Entity} no longer exists";
}

<h1>@ViewBag.Title</h1>
<div class="container mt-5">
    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">Warning!</h4>
        <p>A @ViewBag.Entity que estás à procura já não existe</p>
        <hr>
        <a asp-action="@ViewBag.Action" asp-controller="@ViewBag.Controller" class="btn btn-primary">Back to list</a>
    </div>
</div>