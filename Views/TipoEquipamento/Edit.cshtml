@model TipoEquipamento

<h2>Edit Equipment Type</h2>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="IdTipoEquipamento" />
    <div class="form-group row">
        <div class="col-md-8">
            <label asp-for="NomeTipoEquipamento" class="control-label"></label>
            <input asp-for="NomeTipoEquipamento" class="form-control" />
            <span asp-validation-for="NomeTipoEquipamento" class="text-danger"></span>
        </div>
        <div class="col-md-4 d-flex align-items-end">
            <input type="submit" value="Save" class="btn btn-primary ml-2" />
        </div>
    </div>
</form>