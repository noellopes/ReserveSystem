@model TipoEquipamento

<h2>Create New Equipment Type</h2>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-md-8">
            <label asp-for="NomeTipoEquipamento" class="control-label">Equipment type name</label>
            <input asp-for="NomeTipoEquipamento" class="form-control" />
            <span asp-validation-for="NomeTipoEquipamento" class="text-danger"></span>
        </div>
        <div class="col-md-4 d-flex align-items-end">
            <input type="submit" value="Create" class="btn btn-primary ml-2" />
        </div>
    </div>
</form>