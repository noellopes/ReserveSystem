@model ReserveSystem.Models.TQePreco

@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        font-family: 'Georgia', serif;
        background-color: #f9f9f6;
        color: #1a1a1a;
    }

    .form-container {
        background: #ffffff;
        padding: 3rem;
        border-radius: 16px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 3rem auto;
        transition: all 0.3s ease;
    }

        .form-container:hover {
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
        }

    h1 {
        color: #d4af37;
        font-size: 2rem;
        font-weight: 700;
    }

    .form-group label {
        font-size: 1.1rem;
        color: #1a1a1a;
        font-weight: 600;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #cccccc;
        padding: 12px 16px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background-color: #f9f9f9;
    }

        .form-control:focus {
            border-color: #d4af37;
            box-shadow: 0 0 8px rgba(212, 175, 55, 0.2);
            background-color: #ffffff;
        }

    .form-check-input:checked {
        background-color: #d4af37;
        border-color: #d4af37;
    }

    .form-check-label {
        color: #555555;
        font-size: 1rem;
    }

    .text-danger {
        font-size: 0.875rem;
        color: #cc0000;
    }

    .btn_create {
        background-color: #ffffff;
        border-color: #d4af37;
        color: #333333;
        font-weight: 600;
        padding: 14px 28px;
        border-radius: 50px;
        font-size: 1.125rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        width: 50%;
        margin-bottom: 1rem;
    }

        .btn_create:hover {
            background-color: #333333;
            color: #F5F5F5;
            border-color: #d4af37;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            transform: translateY(-3px);
        }

        .btn_create:active {
            background-color: #000000;
            border-color: #000000;
            color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transform: translateY(0);
        }

    .btn_back {
        background-color: #333333;
        border-color: #d4af37;
        color: #ffffff;
        font-weight: 600;
        padding: 14px 28px;
        border-radius: 50px;
        font-size: 1.125rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

        .btn_back:hover {
            background-color: #ffffff;
            color: #d4af37;
            border-color: #d4af37;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            transform: translateY(-3px);
        }

    .form-group {
        margin-bottom: 2rem;
    }

    .form-check {
        margin-bottom: 1rem;
    }

    .hr {
        border: none;
        height: 2px;
        background-color: #d4af37;
        width: 60%;
        margin: 1rem auto;
        opacity: 0.8;
    }
</style>
<h1>Details</h1>

