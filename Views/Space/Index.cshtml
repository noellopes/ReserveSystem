@model IEnumerable<ReserveSystem.Models.SpaceModel>

@{
    ViewData["Title"] = "Lista de Espaços";
}

<div class="container my-5">
    <div class="text-center">
        <h1 class="text-center my-4 text-dark fw-bold" style="font-family: 'Poppins', sans-serif;">Lista de Espaços</h1>
        <p class="text-muted">Visualize e gerencie os espaços disponíveis.</p>
    </div>

    <div class="text-center mb-4">
        <a asp-action="Create" class="btn btn-dark btn-lg rounded-pill px-5 shadow">
            <i class="fa fa-plus-circle"></i> Criar Novo Espaço
        </a>
    </div>

    <div class="table-responsive">
            <table class="table table-striped table-bordered shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Nome</th>
                        <th>Capacidade</th>
                        <th>Alocação (%)</th>
                        <th>Tipo</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">Nenhum espaço encontrado.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Capacity</td>
                                <td>@item.ReservedPercentage%</td>
                                <td>@item.Type</td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm rounded-pill">Ver</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm rounded-pill">Editar</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm rounded-pill">Excluir</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
</div>
