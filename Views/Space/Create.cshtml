@model ReserveSystem.Models.SpaceModel

@{
    ViewData["Title"] = "Criar Espaço";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h1 class="display-5 text-primary">Criar Novo Espaço</h1>
        <p class="text-muted">Preencha os detalhes para adicionar um novo espaço ao sistema.</p>
    </div>

    <form asp-action="Create" method="post" class="card shadow-sm p-4">
        @Html.AntiForgeryToken()

        <!-- Resumo de Validação -->
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Nome -->
        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label fw-bold">Nome</label>
            <input asp-for="Name" class="form-control" placeholder="Digite o nome do espaço" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Capacidade -->
        <div class="form-group mb-3">
            <label asp-for="Capacity" class="form-label fw-bold">Capacidade</label>
            <input asp-for="Capacity" class="form-control" type="number" placeholder="Capacidade máxima" />
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>

        <!-- Porcentagem Reservada -->
        <div class="form-group mb-3">
            <label asp-for="ReservedPercentage" class="form-label fw-bold">Porcentagem Reservada</label>
            <input asp-for="ReservedPercentage" class="form-control" type="number" min="0" max="100" placeholder="0-100%" />
            <small class="form-text text-muted">
                Insira a porcentagem de vagas reservadas para clientes (0-100).
            </small>
            <span asp-validation-for="ReservedPercentage" class="text-danger"></span>
        </div>

        <!-- Tipo -->
        <div class="form-group mb-3">
            <label asp-for="Type" class="form-label fw-bold">Tipo</label>
            <select asp-for="Type" class="form-control" asp-items="ViewBag.SpaceTypes">
                <option value="">-- Selecione o tipo de espaço --</option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>

        <!-- Botões -->
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-success btn-lg rounded-pill shadow-sm">Criar Espaço</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg rounded-pill ms-2">Voltar</a>
        </div>
    </form>
</div>
