@model ReserveSystem.Models.Schedules

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Schedules</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SchedulesId" />
            <div class="form-group">
                <label asp-for="StartShiftTime" class="control-label"></label>
                <input asp-for="StartShiftTime" class="form-control" />
                <span asp-validation-for="StartShiftTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndShiftTime" class="control-label"></label>
                <input asp-for="EndShiftTime" class="form-control" />
                <span asp-validation-for="EndShiftTime" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="isPrecense" /> @Html.DisplayNameFor(model => model.isPrecense)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="isAvailable" /> @Html.DisplayNameFor(model => model.isAvailable)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="StaffId" class="control-label"></label>
                <select asp-for="StaffId" class="form-control" asp-items="ViewBag.StaffId"></select>
                <span asp-validation-for="StaffId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeOfScheduleId" class="control-label"></label>
                <select asp-for="TypeOfScheduleId" class="form-control" asp-items="ViewBag.TypeOfScheduleId"></select>
                <span asp-validation-for="TypeOfScheduleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
