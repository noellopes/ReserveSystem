@model ReserveSystem.Models.Schedule

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Schedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ScheduleId" />
            <div class="form-group">
                <label asp-for="StaffId" class="control-label">Staff Name</label>
                <select asp-for="StaffId" class="form-control" asp-items="@(ViewData["StaffId"] as SelectList)"></select>
                <span asp-validation-for="StaffId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeOfSheduleId" class="control-label">Type Of SheduleId</label>
                <select asp-for="TypeOfSheduleId" class="form-control" asp-items="@(ViewData["TypeOfSheduleId"] as SelectList)"></select>
                <span asp-validation-for="TypeOfSheduleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" type="date" value="@(ViewData["Date"])" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartShiftTime" class="control-label"></label>
                <input asp-for="StartShiftTime" class="form-control" />
                <span asp-validation-for="StartShiftTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndShiftTime" class="control-label"></label>
                <input asp-for="EndShiftTime" class="form-control" />
                <span asp-validation-for="EndShiftTime" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Presence" /> @Html.DisplayNameFor(model => model.Presence)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
